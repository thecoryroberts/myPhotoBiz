                                    <label asp-for="Input.BrandLogoLightFile" class="form-label">Light Logo</label>
                                    <input asp-for="Input.BrandLogoLightFile" type="file" accept="image/*"
                                           class="form-control" id="brandLogoLightInput" />
                                    <div class="form-text">Recommended size: 400x160 (max 2MB).</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.BrandLogoDarkFile" class="form-label">Dark Logo</label>
                                    <input asp-for="Input.BrandLogoDarkFile" type="file" accept="image/*"
                                           class="form-control" id="brandLogoDarkInput" />
                                    <div class="form-text">Recommended size: 400x160 (max 2MB).</div>
                                </div>
                            </div>

                            <div class="row align-items-center">
                                <div class="col-md-6 mb-3 text-center">
                                    <div class="bg-light rounded p-3">
                                        <img src="@(string.IsNullOrEmpty(Model.Input.BrandLogoLightUrl) ? Url.Content("~/images/logo.png") : Model.Input.BrandLogoLightUrl)"
