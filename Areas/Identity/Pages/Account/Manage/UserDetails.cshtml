        <!-- Edit Profile Modal -->
        <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form id="profile-form" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.FirstName" class="form-label"></label>
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="First name" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.LastName" class="form-label"></label>
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Last name" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone number" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="Input.IsPhotographer" type="checkbox" class="form-check-input"
                                    id="isPhotographer" />
                                <label asp-for="Input.IsPhotographer" class="form-check-label">I am a
                                    photographer</label>
                                <span asp-validation-for="Input.IsPhotographer" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ProfilePictureFile" class="form-label">Profile Picture</label>
                                <input asp-for="Input.ProfilePictureFile" type="file" accept="image/*"
                                    class="form-control" id="profilePictureInput" />
                                <div class="form-text">Upload a square image for best results (max 2MB)</div>
                            </div>

                            <div class="text-center mt-3">
                                <img src="@(string.IsNullOrEmpty(Model.Input.ProfilePictureUrl) ? Url.Content("~/images/users/user-2.jpg") : Model.Input.ProfilePictureUrl)"
                                    class="rounded-circle img-thumbnail" width="150" height="150" alt="Profile Preview"
                                    id="modalProfilePreview" />
                            </div>

                            <hr class="my-4">

                            <h5 class="mb-3"><i class="ti ti-brush me-2"></i>Branding</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.BrandName" class="form-label"></label>
                                    <input asp-for="Input.BrandName" class="form-control" placeholder="Studio name" />
                                    <span asp-validation-for="Input.BrandName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.BrandTagline" class="form-label"></label>
                                    <input asp-for="Input.BrandTagline" class="form-control" placeholder="Tagline" />
                                    <span asp-validation-for="Input.BrandTagline" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.BrandPrimaryColor" class="form-label"></label>
                                    <input asp-for="Input.BrandPrimaryColor" type="color" class="form-control form-control-color" />
                                    <span asp-validation-for="Input.BrandPrimaryColor" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.BrandAccentColor" class="form-label"></label>
                                    <input asp-for="Input.BrandAccentColor" type="color" class="form-control form-control-color" />
