                            <i class="ti ti-user fs-xl text-secondary"></i>
                        </div>
                        <p class="mb-0 fs-sm">
                            <span class="text-dark fw-semibold">@Model.Input.FirstName @Model.Input.LastName</span>
                        </p>
                    </div>
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded">
                            <i class="ti ti-phone fs-xl text-secondary"></i>
                        </div>
                        <p class="mb-0 fs-sm">
                            @(string.IsNullOrEmpty(Model.Input.PhoneNumber) ? "No phone number" :
                                                        Model.Input.PhoneNumber)
                        </p>
                    </div>
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded">
                            <i class="ti ti-mail fs-xl text-secondary"></i>
                        </div>
                        <p class="mb-0 fs-sm">
                            <span class="text-dark fw-semibold">@Model.Email</span>
                        </p>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded">
                            <i
                                class="ti ti-@(Model.Input.IsPhotographer ? "camera" : "user-circle") fs-xl text-secondary"></i>
                        </div>
                        <p class="mb-0 fs-sm">
                            Role: <span class="text-dark fw-semibold">@(Model.Input.IsPhotographer ? "Photographer" :
