                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.BrandCoverImageFile" class="form-label">Brand Cover Image</label>
                                <input asp-for="Input.BrandCoverImageFile" type="file" accept="image/*"
                                       class="form-control" id="brandCoverInput" />
                                <div class="form-text">Recommended size: 1600px wide (max 4MB).</div>
                            </div>

                            <div class="text-center">
                                <img src="@(string.IsNullOrEmpty(Model.Input.BrandCoverImageUrl) ? Url.Content("~/images/auth.jpg") : Model.Input.BrandCoverImageUrl)"
                                     class="img-fluid rounded" alt="Cover Preview" id="brandCoverPreview" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-check me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
    </div>

@section Scripts {
                <partial name="_ValidationScriptsPartial" />
                <script>
                    // Client-side preview for profile picture
                    (function () {
                        const input = document.getElementById('profilePictureInput');
                        const modalPreview = document.getElementById('modalProfilePreview');
                        const mainProfileImage = document.getElementById('profileImage');
                        const brandLogoLightInput = document.getElementById('brandLogoLightInput');
                        const brandLogoDarkInput = document.getElementById('brandLogoDarkInput');
                        const brandCoverInput = document.getElementById('brandCoverInput');
                        const brandLogoLightPreview = document.getElementById('brandLogoLightPreview');
                        const brandLogoDarkPreview = document.getElementById('brandLogoDarkPreview');
                        const brandCoverPreview = document.getElementById('brandCoverPreview');

                        if (!input) return;

                        const handlePreview = (fileInput, previews, maxBytes) => {
                            if (!fileInput) return;
                            fileInput.addEventListener('change', function () {
                                const file = this.files && this.files[0];
                                if (!file) return;
                                if (!file.type.startsWith('image/')) {
                                    alert('Please select an image file');
                                    return;
                                }
                                if (file.size > maxBytes) {
                                    alert('File size is too large.');
                                    this.value = '';
                                    return;
                                }
                                const reader = new FileReader();
                                reader.onload = function (e) {
                                    (previews || []).forEach((target) => {
                                        if (target) target.src = e.target.result;
                                    });
                                };
                                reader.readAsDataURL(file);
                            });
                        };

                        handlePreview(input, [modalPreview, mainProfileImage], 2097152);
                        handlePreview(brandLogoLightInput, [brandLogoLightPreview], 2097152);
                        handlePreview(brandLogoDarkInput, [brandLogoDarkPreview], 2097152);
                        handlePreview(brandCoverInput, [brandCoverPreview], 4194304);
                    })();
                </script>
}
