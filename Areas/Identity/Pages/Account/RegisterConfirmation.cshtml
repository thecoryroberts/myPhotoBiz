@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="auth-box overflow-hidden align-items-center d-flex">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-md-6 col-sm-8">
                <div class="auth-brand text-center mb-4">
                    <a href="@Url.Action("Index", "Home")" class="logo-dark">
                        <img src="~/images/logo-black.png" alt="dark logo" height="32">
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="logo-light">
                        <img src="~/images/logo.png" alt="logo" height="32">
                    </a>
                    <h4 class="fw-bold mt-3">Registration Successful</h4>
                </div>

                <div class="card p-4 rounded-4">
                    <div class="text-center">
                        <div class="mb-4">
                            <i class="ri-check-line text-success" style="font-size: 48px;"></i>
                        </div>
                        <p class="text-muted">
                            Please check your email to confirm your account.
                        </p>

                        @if (Model.DisplayConfirmAccountLink)
                        {
                            <div class="alert alert-info mt-3" role="alert">
                                <p class="mb-2">
                                    <strong>For development purposes only:</strong>
                                </p>
                                <p class="mb-0">
                                    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                                </p>
                            </div>
                        }

                        <div class="mt-4">
                            <a asp-page="./Login" class="btn btn-primary">
                                Go to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
