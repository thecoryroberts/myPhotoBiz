@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

@section styles
{
   <!-- Password Suggestion Js -->
    <script src="~/js/pages/auth-password.js"></script>
}

<div class="auth-box overflow-hidden align-items-center d-flex">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-md-6 col-sm-8">
                <div class="auth-brand text-center mb-4">
                    <a href="@Url.Action("Index", "Home")" class="logo-dark">
                        <img src="~/images/logo-black.png" alt="dark logo" height="32">
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="logo-light">
                        <img src="~/images/logo.png" alt="logo" height="32">
                    </a>
                    <h4 class="fw-bold mt-3">Reset Password</h4>
                    <p class="text-muted w-lg-75 mx-auto">
                        Enter your new password below.
                    </p>
                </div>

                <div class="card p-4 rounded-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input asp-for="Input.Code" type="hidden" />

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="you@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3" data-password="bar">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                            </div>
                            <div class="password-bar my-2"></div>
                            <p class="text-muted fs-xs mb-0">
                                Use 8+ characters with letters, numbers & symbols.
                            </p>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-semibold py-2">
                                Reset Password
                            </button>
                        </div>
                    </form>

                    <p class="text-muted text-center mt-4 mb-0">
                        Remember your password?
                        <a asp-page="./Login" class="text-decoration-underline link-offset-3 fw-semibold">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
