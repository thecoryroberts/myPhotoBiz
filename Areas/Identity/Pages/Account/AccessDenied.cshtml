@page
@model MyPhotoBiz.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    Layout = "/Views/Shared/_BaseLayout.cshtml";
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <span class="avatar avatar-xl bg-danger-subtle text-danger rounded-circle">
                            <i class="ti ti-lock"></i>
                        </span>
                    </div>
                    <h3 class="mb-2">Access Denied</h3>
                    <p class="text-muted">You do not have permission to view this page.</p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="ti ti-home me-1"></i> Go to Dashboard
                        </a>
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="ti ti-logout me-1"></i> Sign Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
