@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="auth-box overflow-hidden align-items-center d-flex">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-md-6 col-sm-8">
                <div class="auth-brand text-center mb-4">
                    <a href="@Url.Action("Index", "Home")" class="logo-dark">
                        <img src="~/images/logo-black.png" alt="dark logo" height="32">
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="logo-light">
                        <img src="~/images/logo.png" alt="logo" height="32">
                    </a>
                    <h4 class="fw-bold mt-3">@ViewData["Title"]</h4>
                </div>

                <div class="card p-4 rounded-4">
                    <div class="text-center">
                        @if (Model.StatusMessage == "Thank you for confirming your email.")
                        {
                            <div class="mb-4">
                                <i class="ri-check-line text-success" style="font-size: 48px;"></i>
                            </div>
                            <h5 class="mb-3">Email Confirmed!</h5>
                            <p class="text-muted mb-4">@Model.StatusMessage</p>
                        }
                        else
                        {
                            <div class="mb-4">
                                <i class="ri-error-warning-line text-danger" style="font-size: 48px;"></i>
                            </div>
                            <h5 class="mb-3">Confirmation Failed</h5>
                            <p class="text-muted mb-4">@Model.StatusMessage</p>
                        }

                        <div class="mt-4">
                            <a asp-page="./Login" class="btn btn-primary">
                                Go to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
