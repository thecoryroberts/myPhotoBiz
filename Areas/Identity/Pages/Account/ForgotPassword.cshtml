@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="auth-box overflow-hidden align-items-center d-flex">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-md-6 col-sm-8">
                <div class="auth-brand text-center mb-4">
                    <a href="@Url.Action("Index", "Home")" class="logo-dark">
                        <img src="~/images/logo-black.png" alt="dark logo" height="32">
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="logo-light">
                        <img src="~/images/logo.png" alt="logo" height="32">
                    </a>
                    <h4 class="fw-bold mt-3">Forgot Password?</h4>
                    <p class="text-muted w-lg-75 mx-auto">
                        Enter your email address and we'll send you a link to reset your password.
                    </p>
                </div>

                <div class="card p-4 rounded-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="you@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary fw-semibold py-2">
                                Send Reset Link
                            </button>
                        </div>
                    </form>

                    <p class="text-muted text-center mt-3 mb-0">
                        Remember your password?
                        <a asp-page="./Login" class="text-decoration-underline link-offset-3 fw-semibold">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
