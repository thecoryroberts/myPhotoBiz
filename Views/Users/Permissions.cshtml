@section Scripts {
<script>
    // Handle Add Permission form submission via AJAX
    document.getElementById('addPermissionForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const name = document.getElementById('permissionName').value;
        const description = document.getElementById('permissionDescription').value;
        const roles = Array.from(document.querySelectorAll('#addPermissionForm input[type=checkbox]:checked')).map(cb => cb.value);

        fetch('/api/permissions', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name, description, roles })
        })
        .then(response => response.ok ? response.json() : Promise.reject(response))
        .then(data => {
            alert('Permission created successfully');
            location.reload();
        })
        .catch(err => alert('Error creating permission'));
    });

    // Show Delete Modal and set item name
    function showDeleteModal(url, name) {
        document.getElementById('deleteItemName').textContent = name;
        document.getElementById('confirmDeleteBtn').onclick = function() {
            performDelete(url);
        };
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }

    // Perform delete via AJAX
    function performDelete(url) {
        fetch(url, { method: 'DELETE' })
        .then(response => response.ok ? alert('Deleted successfully') : alert('Error deleting'))
        .then(() => location.reload());
    }

    // View Permission Details
    function viewPermissionDetails(id, name) {
        document.getElementById('detailsTitle').textContent = name;
        document.getElementById('detailsDescription').textContent = 'Loading details...';
        fetch(`/api/permissions/${id}`)
        .then(response => response.json())
        .then(data => {
            document.getElementById('detailsDescription').textContent = data.description;
            document.getElementById('detailsContent').innerHTML = `<p><strong>Roles:</strong> ${data.roles.join(', ')}</p>`;
        });
        var detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));
        detailsModal.show();
    }

    // Edit Permission (populate Add Permission modal)
    function editPermission() {
        const title = document.getElementById('detailsTitle').textContent;
        document.getElementById('permissionName').value = title;
        var addModal = new bootstrap.Modal(document.getElementById('addPermissionModal'));
        addModal.show();
    }
</script>
}