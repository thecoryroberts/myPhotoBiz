@model MyPhotoBiz.ViewModels.UserDetailsViewModel

<div class="modal fade" id="userDetailsModalElement" tabindex="-1" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-light">
                <h5 class="modal-title fw-semibold" id="userDetailsModalLabel">
                    <i class="ti ti-user me-2"></i>User Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <!-- User Profile Card -->
                    <div class="col-lg-4 mb-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <div class="avatar avatar-xxl mb-3 mx-auto">
                                    <img src="@Url.Content(Model.ProfilePicture ?? "~/images/users/user-1.jpg")"
                                         class="rounded-circle img-thumbnail"
                                         alt="@Model.FullName" />
                                </div>
                                <h5 class="fw-semibold mb-1">@Model.FullName</h5>
                                <p class="text-muted mb-2 small">@Model.Email</p>

                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <p class="mb-3 small">
                                        <i class="ti ti-phone me-1 text-muted"></i>@Model.PhoneNumber
                                    </p>
                                }

                                <!-- Status Badge -->
                                @{
                                    var statusBadge = Model.Status switch
                                    {
                                        "Active" => "bg-success-subtle text-success",
                                        "Inactive" => "bg-secondary-subtle text-secondary",
                                        "Locked" => "bg-danger-subtle text-danger",
                                        "Pending" => "bg-warning-subtle text-warning",
                                        _ => "bg-secondary-subtle text-secondary"
                                    };
                                    var statusIcon = Model.Status switch
                                    {
                                        "Active" => "ti-check",
                                        "Inactive" => "ti-minus",
                                        "Locked" => "ti-lock",
                                        "Pending" => "ti-clock",
                                        _ => "ti-help"
                                    };
                                }
                                <span class="badge @statusBadge py-2 px-3">
                                    <i class="ti @statusIcon me-1"></i>@Model.Status
                                </span>

                                <!-- Roles -->
                                <div class="mt-3">
                                    <h6 class="fw-semibold mb-2 small text-uppercase text-muted">Assigned Roles</h6>
                                    @if (Model.Roles?.Any() == true)
                                    {
                                        <div class="d-flex flex-wrap gap-1 justify-content-center">
                                            @foreach (var role in Model.Roles)
                                            {
                                                var roleBadge = role switch
                                                {
                                                    "Admin" => "bg-danger-subtle text-danger",
                                                    "Photographer" => "bg-primary-subtle text-primary",
                                                    "Client" => "bg-success-subtle text-success",
                                                    _ => "bg-secondary-subtle text-secondary"
                                                };
                                                <span class="badge @roleBadge">@role</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No roles assigned</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- User Details and Statistics -->
                    <div class="col-lg-8">
                        <!-- Statistics -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <div class="card text-center">
                                    <div class="card-body py-3">
                                        <div class="avatar avatar-lg bg-primary-subtle mb-2 mx-auto">
                                            <span class="avatar-title text-primary rounded-circle">
                                                <i class="ti ti-users fs-1"></i>
                                            </span>
                                        </div>
                                        <div class="text-muted small">Total Clients</div>
                                        <div class="h4 mt-1 mb-0">@Model.TotalClients</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-center">
                                    <div class="card-body py-3">
                                        <div class="avatar avatar-lg bg-success-subtle mb-2 mx-auto">
                                            <span class="avatar-title text-success rounded-circle">
                                                <i class="ti ti-camera fs-1"></i>
                                            </span>
                                        </div>
                                        <div class="text-muted small">Photo Shoots</div>
                                        <div class="h4 mt-1 mb-0">@Model.TotalPhotoShoots</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-center">
                                    <div class="card-body py-3">
                                        <div class="avatar avatar-lg bg-info-subtle mb-2 mx-auto">
                                            <span class="avatar-title text-info rounded-circle">
                                                <i class="ti ti-file-invoice fs-1"></i>
                                            </span>
                                        </div>
                                        <div class="text-muted small">Invoices</div>
                                        <div class="h4 mt-1 mb-0">@Model.TotalInvoices</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Account Information -->
                        <div class="card mb-3">
                            <div class="card-header border-light">
                                <h6 class="mb-0 fw-semibold">
                                    <i class="ti ti-info-circle me-2"></i>Account Information
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded flex-shrink-0">
                                                <i class="ti ti-id fs-xl text-secondary"></i>
                                            </div>
                                            <div>
                                                <div class="text-muted small">User ID</div>
                                                <div class="fw-semibold small">#USR@(Model.Id.Substring(0, Math.Min(8, Model.Id.Length)))</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded flex-shrink-0">
                                                <i class="ti ti-mail-check fs-xl text-secondary"></i>
                                            </div>
                                            <div>
                                                <div class="text-muted small">Email Confirmed</div>
                                                @if (Model.EmailConfirmed)
                                                {
                                                    <span class="badge bg-success-subtle text-success small">
                                                        <i class="ti ti-check me-1"></i>Verified
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning-subtle text-warning small">
                                                        <i class="ti ti-x me-1"></i>Not Verified
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded flex-shrink-0">
                                                <i class="ti ti-calendar fs-xl text-secondary"></i>
                                            </div>
                                            <div>
                                                <div class="text-muted small">Account Created</div>
                                                <div class="fw-semibold small">@Model.CreatedDate.ToString("MMM dd, yyyy")</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-sm bg-light d-flex align-items-center justify-content-center rounded flex-shrink-0">
                                                <i class="ti ti-login fs-xl text-secondary"></i>
                                            </div>
                                            <div>
                                                <div class="text-muted small">Last Login</div>
                                                <div class="fw-semibold small">
                                                    @if (Model.LastLogin.HasValue)
                                                    {
                                                        @Model.LastLogin.Value.ToString("MMM dd, yyyy hh:mm tt")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Never</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (Model.LockoutEnd.HasValue && Model.LockoutEnd.Value > DateTimeOffset.UtcNow)
                                    {
                                        <div class="col-12">
                                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                <i class="ti ti-lock fs-xl me-2"></i>
                                                <div>
                                                    <strong>Account Locked</strong>
                                                    <div class="small">Until @Model.LockoutEnd.Value.ToString("MMMM dd, yyyy hh:mm tt")</div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Permissions -->
                        <div class="card">
                            <div class="card-header border-light">
                                <h6 class="mb-0 fw-semibold">
                                    <i class="ti ti-shield-check me-2"></i>Permissions
                                </h6>
                            </div>
                            <div class="card-body">
                                @if (Model.Permissions?.Any() == true)
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var permission in Model.Permissions)
                                        {
                                            <li class="d-flex align-items-center mb-2">
                                                <span class="ti ti-check fs-lg text-success me-2"></span>
                                                <div>
                                                    <span class="fw-semibold">@permission.Name</span>
                                                    @if (!string.IsNullOrEmpty(permission.Description))
                                                    {
                                                        <div class="text-muted small">@permission.Description</div>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted text-center mb-0 small">No permissions assigned to this user's roles</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer border-light">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="ti ti-x me-1"></i>Close
                </button>
                <button type="button" class="btn btn-secondary" onclick="showChangePasswordModal('@Model.Id')">
                    <i class="ti ti-key me-1"></i>Change Password
                </button>
                <button type="button" class="btn btn-primary" onclick="showEditUserModal('@Model.Id')">
                    <i class="ti ti-edit me-1"></i>Edit User
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function showEditUserModal(userId) {
        // Close details modal
        var detailsModal = bootstrap.Modal.getInstance(document.getElementById('userDetailsModalElement'));
        detailsModal.hide();

        // Show edit modal
        $.ajax({
            url: '/Users/Edit/' + userId,
            type: 'GET',
            success: function(result) {
                $('#editUserModal').html(result);
                var modal = new bootstrap.Modal(document.getElementById('editUserModalElement'));
                modal.show();
            },
            error: function(xhr) {
                showToast('Error', 'Failed to load edit user form', 'error');
            }
        });
    }

    function showChangePasswordModal(userId) {
        // Close details modal
        var detailsModal = bootstrap.Modal.getInstance(document.getElementById('userDetailsModalElement'));
        detailsModal.hide();

        // Show change password modal
        $.ajax({
            url: '/Users/ChangePassword/' + userId,
            type: 'GET',
            success: function(result) {
                $('#changePasswordModal').html(result);
                var modal = new bootstrap.Modal(document.getElementById('changePasswordModalElement'));
                modal.show();
            },
            error: function(xhr) {
                showToast('Error', 'Failed to load change password form', 'error');
            }
        });
    }

    function showToast(title, message, type) {
        if (typeof toastr !== 'undefined') {
            toastr[type](message, title);
        } else {
            alert(title + ': ' + message);
        }
    }
</script>
