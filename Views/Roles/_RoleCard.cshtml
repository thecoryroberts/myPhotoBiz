@model MyPhotoBiz.ViewModels.RoleViewModel

<div class="role-card card mb-3" data-role-id="@(Model?.Id ?? "")">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="card-title mb-1">@(Model?.RoleName ?? "")</h5>
                @if (!string.IsNullOrEmpty(Model?.Description))
                {
                    <p class="card-text text-muted small mb-2">@Model.Description</p>
                }
                @if (Model?.Permissions?.Any() == true)
                {
                    <div class="mb-2">
                        <small class="text-muted">Permissions:</small>
                        <div>
                            @foreach (var permission in Model.Permissions!.Take(3))
                            {
                                <span class="badge bg-light-primary text-primary me-1">@permission</span>
                            }
                            @if (Model.Permissions!.Count > 3)
                            {
                                <span class="badge bg-light-secondary text-secondary">+@(Model.Permissions!.Count - 3) more</span>
                            }
                        </div>
                    </div>
                }
                <small class="text-muted">Created: @(Model?.CreatedDate != default ? Model!.CreatedDate.ToString("MMM dd, yyyy") : "N/A")</small>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group" role="group">
                    <a href="#" class="btn btn-sm btn-outline-primary view-role" data-role-id="@(Model?.Id ?? "")" data-bs-toggle="tooltip" title="View Details">
                        <i class="ti ti-eye"></i>
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-secondary edit-role" data-role-id="@(Model?.Id ?? "")" data-bs-toggle="tooltip" title="Edit">
                        <i class="ti ti-edit"></i>
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-danger delete-role" data-role-id="@(Model?.Id ?? "")" data-role-name="@(Model?.RoleName ?? "")" data-bs-toggle="tooltip" title="Delete">
                        <i class="ti ti-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
