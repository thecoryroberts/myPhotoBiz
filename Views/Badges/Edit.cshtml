@using MyPhotoBiz.Enums
@model MyPhotoBiz.Models.Badge

@if (Model == null)
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Badge Not Found</h4>
        <p>The requested badge could not be found. Please check the URL or contact support if this issue persists.</p>
        <a href="@Url.Action("Index", "Badges")" class="btn btn-primary">Back to Badges</a>
    </div>
    return;
}

@{
    ViewBag.Title = "Edit Badge";
    var badge = Model;
    var previewName = string.IsNullOrWhiteSpace(badge.Name) ? "Badge Name" : badge.Name;
    var previewDescription = string.IsNullOrWhiteSpace(badge.Description) ? "Badge description" : badge.Description;
    var previewColor = string.IsNullOrWhiteSpace(badge.Color) ? "#1ab394" : badge.Color;
    var previewIcon = string.IsNullOrWhiteSpace(badge.Icon) ? "ti-award" : badge.Icon;
    var previewIconIsTi = previewIcon.StartsWith("ti-", StringComparison.OrdinalIgnoreCase);
    ViewBag.Purpose = "Edit badge.";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Badge</h5>

            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label"></label>
                    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<BadgeType>()"></select>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Icon" class="form-label"></label>
                        <input asp-for="Icon" class="form-control" placeholder="e.g. ti-star or ðŸŽ–ï¸" list="badgeIconOptions" />
                        <datalist id="badgeIconOptions">
                            <option value="ti-award"></option>
                            <option value="ti-star"></option>
                            <option value="ti-camera"></option>
                            <option value="ti-heart"></option>
                            <option value="ti-trophy"></option>
                            <option value="ti-crown"></option>
                            <option value="ti-diamond"></option>
                            <option value="ti-sparkles"></option>
                            <option value="ti-badge"></option>
                            <option value="ti-shield-check"></option>
                            <option value="ti-rosette"></option>
                            <option value="ti-gift"></option>
                            <option value="ti-rocket"></option>
                            <option value="ti-medal"></option>
                            <option value="ti-flame"></option>
                            <option value="ti-thumb-up"></option>
                        </datalist>
                        <select id="badgeIconPicker" class="form-select mt-2">
                            <option value="">Pick an iconâ€¦</option>
                            <option value="ti-award">Award</option>
                            <option value="ti-star">Star</option>
                            <option value="ti-camera">Camera</option>
                            <option value="ti-heart">Heart</option>
                            <option value="ti-trophy">Trophy</option>
                            <option value="ti-crown">Crown</option>
                            <option value="ti-diamond">Diamond</option>
                            <option value="ti-sparkles">Sparkles</option>
                            <option value="ti-badge">Badge</option>
                            <option value="ti-shield-check">Shield Check</option>
                            <option value="ti-rosette">Rosette</option>
                            <option value="ti-gift">Gift</option>
                            <option value="ti-rocket">Rocket</option>
                            <option value="ti-medal">Medal</option>
                            <option value="ti-flame">Flame</option>
                            <option value="ti-thumb-up">Thumb Up</option>
                        </select>
                        <small class="text-muted">Choose a Tabler icon or enter a custom value.</small>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Color" class="form-label"></label>
                        <div class="d-flex gap-2">
                            <input type="color" id="badgeColorPicker" class="form-control form-control-color" value="@previewColor" title="Pick badge color">
                            <input asp-for="Color" class="form-control" placeholder="#1ab394" />
                        </div>
                        <small class="text-muted">Pick a color or enter a hex value.</small>
                    </div>
                    <div class="col-md-3 mb-3 d-flex align-items-end">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                        <div class="form-check ms-3">
                            <input asp-for="AutoAward" class="form-check-input" />
                            <label asp-for="AutoAward" class="form-check-label">Auto-award</label>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="RequiredContractId" class="form-label"></label>
                    <input asp-for="RequiredContractId" class="form-control" />
                    <small class="form-text text-muted">Optional: contract id required to auto-award this badge.</small>
                </div>

                <div class="mb-4">
                    <label class="form-label">Preview</label>
                    <div class="badge-card badge-preview" id="badgePreview" style="--badge-color: @previewColor;">
                        <div class="badge-icon" id="badgePreviewIcon">
                            @if (previewIconIsTi)
                            {
                                <i class="ti @previewIcon"></i>
                            }
                            else
                            {
                                <span>@previewIcon</span>
                            }
                        </div>
                        <div class="badge-info">
                            <div class="badge-name" id="badgePreviewName">@previewName</div>
                            <small class="badge-description" id="badgePreviewDescription">@previewDescription</small>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-2">This is how the badge appears to clients.</small>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            const nameInput = document.getElementById("@Html.IdFor(m => m.Name)");
            const descriptionInput = document.getElementById("@Html.IdFor(m => m.Description)");
            const iconInput = document.getElementById("@Html.IdFor(m => m.Icon)");
            const iconPicker = document.getElementById("badgeIconPicker");
            const colorInput = document.getElementById("@Html.IdFor(m => m.Color)");
            const colorPicker = document.getElementById("badgeColorPicker");
            const preview = document.getElementById("badgePreview");

            if (!preview) {
                return;
            }

            const previewName = document.getElementById("badgePreviewName");
            const previewDescription = document.getElementById("badgePreviewDescription");
            const previewIcon = document.getElementById("badgePreviewIcon");

            const defaultName = "Badge Name";
            const defaultDescription = "Badge description";
            const defaultColor = "#1ab394";

            const updateIcon = (value) => {
                previewIcon.innerHTML = "";

                if (!value) {
                    const icon = document.createElement("i");
                    icon.className = "ti ti-award";
                    previewIcon.appendChild(icon);
                    return;
                }

                if (value.startsWith("ti-")) {
                    const icon = document.createElement("i");
                    icon.className = `ti ${value}`;
                    previewIcon.appendChild(icon);
                    return;
                }

                previewIcon.textContent = value;
            };

            const normalizeHex = (value) => {
                if (!value) {
                    return null;
                }
                const trimmed = value.trim();
                if (/^#[0-9a-fA-F]{6}$/.test(trimmed)) {
                    return trimmed;
                }
                if (/^[0-9a-fA-F]{6}$/.test(trimmed)) {
                    return `#${trimmed}`;
                }
                return null;
            };

            const hexToRgba = (value, alpha) => {
                const normalized = normalizeHex(value || "");
                if (!normalized) {
                    return null;
                }
                const intValue = parseInt(normalized.slice(1), 16);
                const r = (intValue >> 16) & 255;
                const g = (intValue >> 8) & 255;
                const b = intValue & 255;
                return `rgba(${r}, ${g}, ${b}, ${alpha})`;
            };

            const updatePreview = () => {
                const nameValue = nameInput?.value.trim();
                previewName.textContent = nameValue || defaultName;

                const descriptionValue = descriptionInput?.value.trim();
                previewDescription.textContent = descriptionValue || defaultDescription;

                const colorValue = colorInput?.value.trim();
                const pickerValue = colorPicker?.value?.trim();
                const normalized = normalizeHex(colorValue || "");
                const normalizedPicker = normalizeHex(pickerValue || "");
                const colorToApply = normalized || normalizedPicker || defaultColor;
                preview.style.setProperty("--badge-color", colorToApply);
                preview.style.borderLeftColor = colorToApply;
                const tint = hexToRgba(normalized || normalizedPicker, 0.12);
                preview.style.backgroundColor = tint || "";

                if (colorPicker && normalized && colorPicker.value !== normalized) {
                    colorPicker.value = normalized;
                }

                const iconValue = iconInput?.value.trim();
                updateIcon(iconValue || "");

                if (iconPicker && iconValue && iconPicker.value !== iconValue) {
                    const hasOption = Array.from(iconPicker.options).some((opt) => opt.value === iconValue);
                    if (hasOption) {
                        iconPicker.value = iconValue;
                    }
                }
            };

            [nameInput, descriptionInput, iconInput, colorInput].forEach((input) => {
                if (!input) {
                    return;
                }

                input.addEventListener("input", updatePreview);
                input.addEventListener("change", updatePreview);
            });

            if (iconPicker) {
                iconPicker.addEventListener("change", () => {
                    if (iconInput) {
                        iconInput.value = iconPicker.value;
                    }
                    updatePreview();
                });
            }

            if (colorPicker) {
                const syncPicker = () => {
                    if (colorInput) {
                        colorInput.value = colorPicker.value;
                    }
                    updatePreview();
                };
                colorPicker.addEventListener("input", syncPicker);
                colorPicker.addEventListener("change", syncPicker);
            }

            updatePreview();
        })();
    </script>
}
