@{
    var title = ViewBag.Title as string ?? "Page";
    var pageTitle = ViewBag.PageTitle as string ?? title;
    var subtitle = ViewBag.SubTitle as string;
    var subtitleUrl = ViewBag.SubTitleUrl as string;
    var icon = ViewBag.Icon as string ?? "ti-file";
    var color = ViewBag.Color as string ?? "primary";
    var backUrl = ViewBag.BackUrl as string;
    var backText = ViewBag.BackText as string ?? "Back to List";
    var actionUrl = ViewBag.ActionUrl as string;
    var actionText = ViewBag.ActionText as string;
    var actionIcon = ViewBag.ActionIcon as string ?? "ti-plus";
    var actionColor = ViewBag.ActionColor as string ?? "primary";
    var purpose = ViewBag.Purpose as string;
}

<div class="page-title-head d-flex align-items-center">
    <div class="flex-grow-1">
        <h4 class="fs-lg text-uppercase fw-bold m-0">@title</h4>
        @if (!string.IsNullOrWhiteSpace(purpose))
        {
            <p class="text-muted lrg mb-0"><i class="ti @icon me-1"></i>@purpose</p>
        }
    </div>

    <div class="text-start">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            @if (!string.IsNullOrEmpty(subtitle))
            {
                @if (!string.IsNullOrEmpty(subtitleUrl))
                {
                    <li class="breadcrumb-item"><a href="@subtitleUrl">@subtitle</a></li>
                }
                else
                {
                    <li class="breadcrumb-item">@subtitle</li>
                }
            }
            <li class="breadcrumb-item active">@title</li>
        </ol>
    </div>
</div>
