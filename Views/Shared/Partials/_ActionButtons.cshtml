@*
    Reusable Action Buttons Component
    Usage: <partial name="Partials/_ActionButtons" model="@actionConfig" />

    ActionButtonsModel:
    - Id: int - Entity ID
    - Controller: string - Controller name
    - ShowView: bool - Show view button (default: true)
    - ShowEdit: bool - Show edit button (default: true)
    - ShowDelete: bool - Show delete button (default: true)
    - DeleteDataAttribute: string - Data attribute name for delete (e.g., "data-client-name")
    - DeleteDataValue: string - Value for delete data attribute
    - ExtraButtons: List<ExtraButton> - Additional custom buttons
*@
@model MyPhotoBiz.ViewModels.ActionButtonsModel

<div class="d-flex align-items-center justify-content-center gap-1">
    @if (Model.ShowView)
    {
        <a asp-controller="@Model.Controller" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-sm btn-outline-info btn-icon"
           title="View Details"
           aria-label="View details for @Model.DeleteDataValue">
            <i class="ti ti-eye" aria-hidden="true"></i>
        </a>
    }
    else
    {
        <button type="button" class="btn btn-sm btn-outline-info btn-icon disabled" title="View Details" disabled>
            <i class="ti ti-eye" aria-hidden="true"></i>
        </button>
    }

    @if (Model.ShowEdit)
    {
        <a asp-controller="@Model.Controller" asp-action="Edit" asp-route-id="@Model.Id"
           class="btn btn-sm btn-outline-primary btn-icon"
           title="Edit"
           aria-label="Edit @Model.DeleteDataValue">
            <i class="ti ti-edit" aria-hidden="true"></i>
        </a>
    }
    else
    {
        <button type="button" class="btn btn-sm btn-outline-primary btn-icon disabled" title="Edit" disabled>
            <i class="ti ti-edit" aria-hidden="true"></i>
        </button>
    }

    @if (Model.ExtraButtons != null)
    {
        @foreach (var btn in Model.ExtraButtons)
        {
            var controller = btn.Controller ?? Model.Controller;
            <a asp-controller="@controller" asp-action="@btn.Action" asp-route-id="@Model.Id"
               class="btn btn-sm btn-outline-secondary btn-icon"
               title="@btn.Title"
               aria-label="@btn.Title @Model.DeleteDataValue">
                <i class="@btn.Icon" aria-hidden="true"></i>
            </a>
        }
    }

    @if (Model.ShowDelete)
    {
        <a asp-controller="@Model.Controller" asp-action="Delete" asp-route-id="@Model.Id"
           class="btn btn-sm btn-outline-danger btn-icon delete-btn"
           title="Delete"
           aria-label="Delete @Model.DeleteDataValue"
           data-item-name="@Model.DeleteDataValue">
            <i class="ti ti-trash" aria-hidden="true"></i>
        </a>
    }
    else
    {
        <button type="button" class="btn btn-sm btn-outline-danger btn-icon disabled" title="Delete" disabled>
            <i class="ti ti-trash" aria-hidden="true"></i>
        </button>
    }
</div>
