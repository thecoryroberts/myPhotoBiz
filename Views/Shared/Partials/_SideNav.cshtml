<!-- Topbar Start -->
@using Microsoft.AspNetCore.Identity
@using MyPhotoBiz.Models

@inject UserManager<ApplicationUser> UserManager

@{
    var isAdmin = User?.IsInRole("Admin") == true;
    var isPhotographer = User?.IsInRole("Photographer") == true;
    var isClient = User?.IsInRole("Client") == true;
    var isStaff = isAdmin || isPhotographer;
    var currentUser = User?.Identity?.IsAuthenticated == true ? await UserManager.GetUserAsync(User) : null;
    var brandName = string.IsNullOrWhiteSpace(currentUser?.BrandName) ? "myPhotoBiz" : currentUser.BrandName;
    var brandLogoLight = string.IsNullOrWhiteSpace(currentUser?.BrandLogoLightUrl)
        ? Url.Content("~/images/logo_white.png")
        : currentUser.BrandLogoLightUrl;
    var brandLogoDark = string.IsNullOrWhiteSpace(currentUser?.BrandLogoDarkUrl)
        ? Url.Content("~/images/logo_white.png")
        : currentUser.BrandLogoDarkUrl;
}

<!-- Sidenav Menu Start -->
<div class="sidenav-menu">

    <!-- Brand Logo -->
    <a href="@Url.Action("Index", "Home")" class="logo">
        <span class="logo logo-light">
            <span class="logo-lg">
                <img src="@brandLogoLight" alt="@brandName logo">
            </span>
            <span class="logo-sm">
                <img src="@brandLogoLight" alt="@brandName logo">
            </span>
        </span>

        <span class="logo logo-dark">
            <span class="logo-lg">
                <img src="@brandLogoDark" alt="@brandName logo">
            </span>
            <span class="logo-sm">
                <img src="@brandLogoDark" alt="@brandName logo">
            </span>
        </span>
    </a>

    <!-- Sidebar Hover Menu Toggle Button -->
    <button class="button-on-hover">
        <i class="ti ti-menu-4 fs-22 align-middle"></i>
    </button>

    <!-- Full Sidebar Menu Close Button -->
    <button class="button-close-offcanvas">
        <i class="ti ti-x align-middle"></i>
    </button>

    <div class="scrollbar" data-simplebar>

        <!-- User -->
        @if (User?.Identity?.IsAuthenticated == true)
        {
            var sidenavUser = currentUser ?? await UserManager.GetUserAsync(User);
            var fullName = (sidenavUser?.FirstName + " " + sidenavUser?.LastName) ?? "User";
            var displayRole = isAdmin ? "Admin" : (isPhotographer ? "Photographer" : "Client");
            var profilePic = string.IsNullOrEmpty(sidenavUser?.ProfilePicture) ? Url.Content("~/images/users/user-2.jpg") : sidenavUser.ProfilePicture;

            <div class="sidenav-user">
                <div class="d-flex justify-content-between align-items-center">

                    <!-- User Info -->
                    <div>
                        <a href="@Url.Page("/Account/Manage/UserDetails", new { area = "Identity" })" class="link-reset">
                            <img src="@profilePic" width="32" class="rounded-circle me-lg-2 d-flex" alt="user-image">
                            <span class="sidenav-user-name fw-bold">@fullName</span>
                            <span class="fs-12 fw-semibold">@displayRole</span>
                        </a>
                    </div>

                    <!-- Settings Dropdown -->
                    <div>
                        <a class="dropdown-toggle drop-arrow-none link-reset sidenav-user-set-icon"
                            data-bs-toggle="dropdown" data-bs-offset="0,12" href="#!" aria-haspopup="false"
                            aria-expanded="false">
                            <i class="ti ti-settings fs-24 align-middle ms-1"></i>
                        </a>

                        <div class="dropdown-menu">
                            <div class="dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Welcome back!</h6>
                            </div>

                            <a href="@Url.Page("/Account/Manage/UserDetails", new { area = "Identity" })"
                                class="dropdown-item">
                                <i class="ti ti-user-circle me-2 fs-17 align-middle"></i>
                                <span class="align-middle">Profile</span>
                            </a>

                            <a href="@Url.Action("Index", "Notifications")" class="dropdown-item">
                                <i class="ti ti-bell-ringing me-2 fs-17 align-middle"></i>
                                <span class="align-middle">Notifications</span>
                            </a>

                            <a href="@Url.Page("/Account/Manage/UserDetails", new { area = "Identity" })"
                                class="dropdown-item">
                                <i class="ti ti-settings-2 me-2 fs-17 align-middle"></i>
                                <span class="align-middle">Account Settings</span>
                            </a>

                            <a href="@Url.Page("/Account/Manage/ChangePassword", new { area = "Identity" })"
                                class="dropdown-item">
                                <i class="ti ti-lock me-2 fs-17 align-middle"></i>
                                <span class="align-middle">Change Password</span>
                            </a>

                            <div class="dropdown-divider"></div>

                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                <button type="submit"
                                    class="dropdown-item text-danger fw-semibold border-0 bg-transparent w-100 text-start">
                                    <i class="ti ti-logout-2 me-2 fs-17 align-middle"></i>
                                    <span class="align-middle">Log Out</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Sidenav Menu -->
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <ul class="side-nav">

                <!-- Dashboard - All authenticated users -->
                <li class="side-nav-item">
                    <a href="@Url.Action("Index", "Home")" class="side-nav-link">
                        <span class="menu-icon">
                            <i class="ti ti-layout-dashboard"></i>
                        </span>
                        <span class="menu-text">Dashboard</span>
                    </a>
                </li>

                @* ==================== CLIENT MENU ==================== *@
                @if (isClient)
                {
                    <li class="side-nav-title mt-2">My Account</li>

                    <!-- My Photo Shoots -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("MyPhotoShoots", "PhotoShoots")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-camera"></i>
                            </span>
                            <span class="menu-text">My Photo Shoots</span>
                        </a>
                    </li>

                    <!-- My Galleries -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "Gallery")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-layout-grid"></i>
                            </span>
                            <span class="menu-text">My Galleries</span>
                        </a>
                    </li>

                    <!-- My Albums -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "Albums")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-album"></i>
                            </span>
                            <span class="menu-text">My Albums</span>
                        </a>
                    </li>

                    <!-- My Contracts -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "Contracts")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-file-certificate"></i>
                            </span>
                            <span class="menu-text">My Contracts</span>
                        </a>
                    </li>

                    <!-- My Invoices -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("MyInvoices", "Invoices")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-file-invoice"></i>
                            </span>
                            <span class="menu-text">My Invoices</span>
                        </a>
                    </li>

                    <!-- My Bookings -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("MyBookings", "Bookings")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-calendar-event"></i>
                            </span>
                            <span class="menu-text">My Bookings</span>
                        </a>
                    </li>
                }

                @* ==================== STAFF MENU (Admin + Photographer) ==================== *@
                @if (isStaff)
                {
                    <li class="side-nav-title mt-2">Workflow</li>

                    <!-- Bookings -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarBookings" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-calendar-event"></i>
                            </span>
                            <span class="menu-text">Bookings</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarBookings">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Bookings", new { status = "Pending" })" class="side-nav-link">
                                        <span class="menu-text">Pending</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Bookings")" class="side-nav-link">
                                        <span class="menu-text">All Bookings</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Availability", "Bookings")" class="side-nav-link">
                                        <span class="menu-text">Availability</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Photo Shoots -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarPhotoShoots" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-camera"></i>
                            </span>
                            <span class="menu-text">Photo Shoots</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarPhotoShoots">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "PhotoShoots")" class="side-nav-link">
                                        <span class="menu-text">All Shoots</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Calendar", "PhotoShoots")" class="side-nav-link">
                                        <span class="menu-text">Calendar</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Contracts -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarContracts" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-file-certificate"></i>
                            </span>
                            <span class="menu-text">Contracts</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarContracts">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Contracts")" class="side-nav-link">
                                        <span class="menu-text">All Contracts</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "ContractTemplates")" class="side-nav-link">
                                        <span class="menu-text">Templates</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li class="side-nav-title mt-2">Client Management</li>

                    <!-- Clients -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarClients" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-users"></i>
                            </span>
                            <span class="menu-text">Clients</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarClients">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Clients")" class="side-nav-link">
                                        <span class="menu-text">All Clients</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Invoices -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarInvoices" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-file-invoice"></i>
                            </span>
                            <span class="menu-text">Invoices</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarInvoices">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Invoices")" class="side-nav-link">
                                        <span class="menu-text">All Invoices</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li class="side-nav-title mt-2">Media Library</li>

                    <!-- Media Library - Unified Navigation -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarMediaLibrary" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-library"></i>
                            </span>
                            <span class="menu-text">Media Library</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarMediaLibrary">
                            <ul class="sub-menu">
                                <!-- Photos Upload & Management -->
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Upload", "Photos")" class="side-nav-link">
                                        <i class="ti ti-upload me-2"></i>
                                        <span class="menu-text">Upload Photos</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Photos")" class="side-nav-link">
                                        <i class="ti ti-photo me-2"></i>
                                        <span class="menu-text">All Photos</span>
                                    </a>
                                </li>
                                <li class="side-nav-divider"></li>
                                <!-- Albums - Photo Collections -->
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Albums")" class="side-nav-link">
                                        <i class="ti ti-album me-2"></i>
                                        <span class="menu-text">Albums</span>
                                    </a>
                                </li>
                                <li class="side-nav-divider"></li>
                                <!-- Galleries - Client Delivery -->
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Galleries")" class="side-nav-link">
                                        <i class="ti ti-layout-grid me-2"></i>
                                        <span class="menu-text">Client Galleries</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Proofing -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarProofs" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-heart-handshake"></i>
                            </span>
                            <span class="menu-text">Proofing</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarProofs">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Proofs")" class="side-nav-link">
                                        <span class="menu-text">All Proofs</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Analytics", "Proofs")" class="side-nav-link">
                                        <span class="menu-text">Analytics</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- File Manager -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "FileManager")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-folder"></i>
                            </span>
                            <span class="menu-text">File Manager</span>
                        </a>
                    </li>

                    <li class="side-nav-title mt-2">Services & Products</li>

                    <!-- Packages -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarPackages" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-package"></i>
                            </span>
                            <span class="menu-text">Packages</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarPackages">
                            <ul class="sub-menu">
                                @if (isAdmin)
                                {
                                    <li class="side-nav-item">
                                        <a href="@Url.Action("Manage", "Packages")" class="side-nav-link">
                                            <span class="menu-text">Manage</span>
                                        </a>
                                    </li>
                                    <li class="side-nav-item">
                                        <a href="@Url.Action("AddOns", "Packages")" class="side-nav-link">
                                            <span class="menu-text">Add-ons</span>
                                        </a>
                                    </li>
                                }
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Packages")" class="side-nav-link">
                                        <span class="menu-text">View Packages</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Print Orders -->
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "PrintOrder")" class="side-nav-link">
                            <span class="menu-icon">
                                <i class="ti ti-printer"></i>
                            </span>
                            <span class="menu-text">Print Orders</span>
                        </a>
                    </li>
                }

                @* ==================== ADMIN ONLY MENU ==================== *@
                @if (isAdmin)
                {
                    <li class="side-nav-title mt-2">System</li>

                    <!-- Users -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarUsers" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-users-group"></i>
                            </span>
                            <span class="menu-text">Users</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarUsers">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Users")" class="side-nav-link">
                                        <span class="menu-text">All Users</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Roles")" class="side-nav-link">
                                        <span class="menu-text">Roles</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Permissions")" class="side-nav-link">
                                        <span class="menu-text">Permissions</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Badges -->
                    <li class="side-nav-item">
                        <a data-bs-toggle="collapse" href="#sidebarBadges" class="side-nav-link" aria-expanded="false">
                            <span class="menu-icon">
                                <i class="ti ti-award"></i>
                            </span>
                            <span class="menu-text">Badges</span>
                            <span class="menu-arrow"></span>
                        </a>
                        <div class="collapse" id="sidebarBadges">
                            <ul class="sub-menu">
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Index", "Badges")" class="side-nav-link">
                                        <span class="menu-text">All Badges</span>
                                    </a>
                                </li>
                                <li class="side-nav-item">
                                    <a href="@Url.Action("Create", "Badges")" class="side-nav-link">
                                        <span class="menu-text">New Badge</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                }

                <!-- Notifications - All authenticated users -->
                <li class="side-nav-item">
                    <a href="@Url.Action("Index", "Notifications")" class="side-nav-link">
                        <span class="menu-icon">
                            <i class="ti ti-bell"></i>
                        </span>
                        <span class="menu-text">Notifications</span>
                    </a>
                </li>

            </ul>
        }
        else
        {
            <ul class="side-nav">
                <li class="side-nav-title">Menu</li>

                <li class="side-nav-item">
                    <a asp-area="Identity" asp-page="/Account/Login" class="side-nav-link">
                        <span class="menu-icon">
                            <i class="ti ti-login"></i>
                        </span>
                        <span class="menu-text">Login</span>
                    </a>
                </li>

                <li class="side-nav-item">
                    <a asp-area="Identity" asp-page="/Account/Register" class="side-nav-link">
                        <span class="menu-icon">
                            <i class="ti ti-user-plus"></i>
                        </span>
                        <span class="menu-text">Register</span>
                    </a>
                </li>
            </ul>
        }

    </div>
</div>
<!-- Sidenav Menu End -->

<style>
    /* Sidebar submenu divider styling */
    .side-nav-divider {
        height: 1px;
        margin: 0.5rem 0;
        background-color: rgba(0, 0, 0, 0.1);
        list-style: none;
    }

    [data-bs-theme="dark"] .side-nav-divider {
        background-color: rgba(255, 255, 255, 0.1);
    }

    /* Media Library submenu icon spacing */
    #sidebarMediaLibrary .sub-menu .side-nav-link i {
        font-size: 14px;
        opacity: 0.7;
    }
</style>
