@model MyPhotoBiz.ViewModels.DashboardViewModel
@using MyPhotoBiz.Enums

@{
    ViewData["Title"] = "Dashboard";
    var userName = User.FindFirst("FullName")?.Value ?? User.Identity?.Name ?? "User";

    ViewBag.Purpose = "A snapshot of business metrics and schedules";
    ViewBag.Icon = "ti-chart-histogram";
}

@section styles
{
    <style>
        /* ===== Dashboard layout helpers ===== */
        .dashboard-page .widget-hidden { display: none !important; }

        .dashboard-page .widget-card { height: 100%; }
        .dashboard-page .widget-card.widget-collapsed { height: auto !important; }

        .dashboard-page .widget-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: .75rem;
            flex-wrap: wrap;
        }

        .dashboard-page .widget-title-icon {
            width: 34px;
            height: 34px;
            border-radius: 999px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .dashboard-page .widget-table tbody tr td {
            padding-top: .75rem;
            padding-bottom: .75rem;
        }

        /* KPI cards: clickable + clean */
        .dashboard-page .kpi-link {
            display: block;
            color: inherit;
            text-decoration: none;
            border-radius: inherit;
        }

        .dashboard-page .kpi-card {
            transition: transform .12s ease, box-shadow .12s ease;
        }

        .dashboard-page .kpi-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(0,0,0,.08);
        }

        .dashboard-page .kpi-card:focus-within {
            outline: 2px solid rgba(79, 70, 229, .35);
            outline-offset: 2px;
        }

        /* Better overflow behavior for long text rows */
        .dashboard-page .widget-row-main .fw-semibold {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            max-width: 100%;
        }

        /* Revenue chart height */
        .dashboard-revenue-chart {
            min-height: 220px;
        }

        /* Reduce layout jumps when collapsing */
        .widget-collapse { line-height: 1; }
    </style>
}

@await Html.PartialAsync("~/Views/Shared/Partials/_PageTitle.cshtml")

<div class="container-fluid dashboard-page">

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-end">
            <div class="dropdown">
                <button class="btn btn-light btn-sm dropdown-toggle"
                        type="button"
                        id="customizeDashboard"
                        data-bs-toggle="dropdown"
                        data-bs-auto-close="outside">
                    <i aria-hidden="true" class="ti ti-settings me-1"></i> Customize
                </button>

                <div class="dropdown-menu dropdown-menu-end p-3 dashboard-customize-menu">
                    <h6 class="dropdown-header px-0">Show/Hide Widgets</h6>

                    <div class="widget-toggles">
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-kpi-stats" data-widget="kpi-stats" checked>
                            <label class="form-check-label" for="toggle-kpi-stats">KPI Statistics</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-welcome" data-widget="welcome" checked>
                            <label class="form-check-label" for="toggle-welcome">Welcome & Overview</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-utilization" data-widget="utilization" checked>
                            <label class="form-check-label" for="toggle-utilization">Photographer Utilization</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-overdue" data-widget="overdue" checked>
                            <label class="form-check-label" for="toggle-overdue">Overdue Aging</label>
                        </div>
                        @* proofs disabled in view *@
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-upcoming" data-widget="upcoming" checked>
                            <label class="form-check-label" for="toggle-upcoming">Upcoming Shoots</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-invoices" data-widget="invoices" checked>
                            <label class="form-check-label" for="toggle-invoices">Recent Invoices</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input widget-toggle" type="checkbox" id="toggle-activity" data-widget="activity" checked>
                            <label class="form-check-label" for="toggle-activity">Recent Activity</label>
                        </div>
                    </div>

                    <hr class="my-2">

                    <button type="button" class="btn btn-sm btn-outline-secondary w-100" onclick="resetDashboardWidgets()">
                        <i aria-hidden="true" class="ti ti-refresh me-1"></i> Reset to Default
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Header Card -->
    <div class="row mb-3" data-widget-id="welcome">
        <div class="col-12">
            <div class="card widget-card">
                <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h5 class="card-title mb-0">Welcome Back, @userName</h5>

                    <div class="widget-actions d-flex align-items-center gap-2">
                        <button class="btn btn-sm btn-link text-muted p-0 widget-collapse"
                                data-bs-toggle="collapse"
                                data-bs-target="#welcome-body"
                                aria-expanded="true"
                                aria-controls="welcome-body"
                                title="Collapse">
                            <i class="ti ti-chevron-up fs-lg"></i>
                        </button>
                    </div>
                </div>

                <div class="collapse show" id="welcome-body">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <!-- Today's Schedule Panel -->
                            <div class="col-xxl-3 col-xl-6 order-xl-1 order-xxl-0">
                                <div class="p-4 border-end border-dashed h-100">
                                    <h4 class="fs-lg mb-1">Welcome back!</h4>
                                    <span class="text-muted">
                                        You have
                                        <span class="text-primary fw-semibold">@Model.TodaysShootsCount</span> shoot(s) today
                                        @if (Model.PendingBookingsCount > 0)
                                        {
                                            <span>and <span class="text-warning fw-semibold">@Model.PendingBookingsCount</span> pending booking(s).</span>
                                        }
                                    </span>

                                    @if (Model.TodaysSchedule.Any())
                                    {
                                        <ul class="list-group list-group-flush mt-3">
                                            @foreach (var shoot in Model.TodaysSchedule.Take(3))
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                                    <div class="text-truncate pe-2">
                                                        <span class="badge @(shoot.Status == PhotoShootStatus.Completed ? "text-bg-success" : shoot.Status == PhotoShootStatus.InProgress ? "text-bg-primary" : "text-bg-info") avatar-xs me-2">
                                                            <span class="avatar-title fw-medium fs-sm"><i class="ti ti-camera"></i></span>
                                                        </span>
                                                        @shoot.Title
                                                    </div>
                                                    <span class="text-muted flex-shrink-0">@shoot.ScheduledDate.ToString("h:mm tt")</span>
                                                </li>
                                            }
                                        </ul>

                                        <div class="text-center mt-3">
                                            <a asp-controller="PhotoShoots" asp-action="Calendar" class="btn btn-secondary btn-sm rounded-pill">
                                                <i aria-hidden="true" class="ti ti-calendar me-1"></i> View Calendar
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-4 text-muted">
                                            <i class="ti ti-calendar-off fs-1 mb-2 d-block"></i>
                                            <p class="mb-2">No shoots scheduled for today</p>
                                            <a asp-controller="PhotoShoots" asp-action="Create" class="btn btn-primary btn-sm rounded-pill">
                                                <i aria-hidden="true" class="ti ti-plus me-1"></i> Schedule Shoot
                                            </a>
                                        </div>
                                    }
                                </div>
                                <hr class="d-xxl-none border-light m-0">
                            </div>

                            <!-- Revenue Chart Panel -->
                            <div class="col-xxl-6 order-xl-3 order-xxl-1">
                                <div class="px-4 py-3 border-end border-dashed h-100">
                                    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                                        <h4 class="card-title mb-0">Revenue Overview</h4>
                                        <a asp-controller="Invoices" asp-action="Index" class="link-reset text-decoration-underline fw-semibold link-offset-3">
                                            View Invoices <i class="ti ti-arrow-right"></i>
                                        </a>
                                    </div>

                                    <div class="row text-center mb-3 g-2">
                                        <div class="col-md">
                                            <div class="bg-light bg-opacity-50 p-2 rounded">
                                                <h5 class="m-0">
                                                    <span class="text-muted">This Month:</span>
                                                    <span class="text-success">@Model.MonthlyRevenue.ToString("C0")</span>
                                                    @if (Model.RevenueChangePercent != 0)
                                                    {
                                                        <small class="@(Model.RevenueChangePercent > 0 ? "text-success" : "text-danger") ms-1">
                                                            <i class="ti @(Model.RevenueChangePercent > 0 ? "ti-trending-up" : "ti-trending-down")"></i>
                                                            @Math.Abs(Model.RevenueChangePercent).ToString("F0")%
                                                        </small>
                                                    }
                                                </h5>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <div class="bg-light bg-opacity-50 p-2 rounded">
                                                <h5 class="m-0">
                                                    <span class="text-muted">This Year:</span>
                                                    <span class="text-primary">@Model.YearlyRevenue.ToString("C0")</span>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>

                                    <div dir="ltr" class="dashboard-revenue-chart">
                                        <canvas id="revenue-chart"></canvas>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Stats Panel -->
                            <div class="col-xxl-3 col-xl-6 order-xl-2 order-xxl-2">
                                <div class="p-4 h-100">
                                    <h4 class="card-title mb-1">Business Snapshot</h4>
                                    <p class="text-muted fs-xs mb-3">Your current business status at a glance.</p>

                                    <!-- Pending Invoices -->
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar-sm flex-shrink-0 me-3">
                                            <span class="avatar-title bg-warning-subtle text-warning rounded-circle">
                                                <i class="ti ti-file-invoice"></i>
                                            </span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">@Model.PendingInvoiceAmount.ToString("C0")</h6>
                                            <small class="text-muted">Pending Invoices</small>
                                        </div>
                                        <a asp-controller="Invoices" asp-action="Index" asp-route-status="Pending" class="text-muted" aria-label="View pending invoices">
                                            <i class="ti ti-chevron-right"></i>
                                        </a>
                                    </div>

                                    <!-- Overdue Invoices -->
                                    @if (Model.OverdueInvoicesCount > 0)
                                    {
                                        <div class="mb-3 border rounded p-2 bg-danger-subtle bg-opacity-10">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="avatar-sm flex-shrink-0 me-3">
                                                    <span class="avatar-title bg-danger-subtle text-danger rounded-circle">
                                                        <i class="ti ti-alert-triangle"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0 text-danger">@Model.OverdueAmount.ToString("C0")</h6>
                                                    <small class="text-muted">@Model.OverdueInvoicesCount Overdue Invoice(s)</small>
                                                </div>
                                            </div>
                                            <div class="d-flex gap-1 mt-2">
                                                <a asp-controller="Invoices" asp-action="Index" asp-route-status="Overdue" class="btn btn-sm btn-outline-danger flex-fill">
                                                    <i aria-hidden="true" class="ti ti-eye me-1"></i>View All
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    <!-- Contracts Awaiting -->
                                    @if (Model.ContractsAwaitingSignatureCount > 0)
                                    {
                                        <div class="mb-3 border rounded p-2 bg-info-subtle bg-opacity-10">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="avatar-sm flex-shrink-0 me-3">
                                                    <span class="avatar-title bg-info-subtle text-info rounded-circle">
                                                        <i class="ti ti-file-certificate"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0">@Model.ContractsAwaitingSignatureCount</h6>
                                                    <small class="text-muted">Contract(s) Awaiting Signature</small>
                                                </div>
                                            </div>
                                            <div class="d-flex gap-1 mt-2">
                                                <a asp-controller="Contracts" asp-action="Index" asp-route-status="Pending" class="btn btn-sm btn-outline-info flex-fill">
                                                    <i aria-hidden="true" class="ti ti-eye me-1"></i>View All
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    <!-- Pending Bookings -->
                                    @if (Model.PendingBookingsCount > 0)
                                    {
                                        <div class="mb-3 border rounded p-2 bg-primary-subtle bg-opacity-10">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="avatar-sm flex-shrink-0 me-3">
                                                    <span class="avatar-title bg-primary-subtle text-primary rounded-circle">
                                                        <i class="ti ti-calendar-event"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0">@Model.PendingBookingsCount</h6>
                                                    <small class="text-muted">Pending Booking Request(s)</small>
                                                </div>
                                            </div>
                                            <div class="d-flex gap-1 mt-2">
                                                <a asp-controller="Bookings" asp-action="Index" asp-route-status="Pending" class="btn btn-sm btn-outline-primary flex-fill">
                                                    <i aria-hidden="true" class="ti ti-eye me-1"></i>View All
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    <hr class="border-dashed">

                                    <div class="d-grid gap-2">
                                        <a asp-controller="BookingRequests" asp-action="Create" class="btn btn-primary btn-sm">
                                            <i aria-hidden="true" class="ti ti-calendar-plus me-1"></i> New Booking
                                        </a>
                                        <a asp-controller="Invoices" asp-action="Create" class="btn btn-outline-secondary btn-sm">
                                            <i aria-hidden="true" class="ti ti-file-plus me-1"></i> New Invoice
                                        </a>
                                    </div>
                                </div>
                                <hr class="d-xxl-none border-light m-0">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- KPI Stats Row (NO collapse buttons â€” Option A) -->
    <div class="row g-3 mb-3 row-cols-2 row-cols-md-3 row-cols-xl-5" data-widget-id="kpi-stats">

        <div class="col">
            <div class="card dashboard-card widget-card h-100 kpi-card">
                <a class="kpi-link" asp-controller="Clients" asp-action="Index">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-1">@Model.TotalClients</h3>
                                <p class="mb-0 text-muted fs-sm">Total Clients</p>
                            </div>
                            <div class="avatar-md">
                                <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-32">
                                    <i aria-hidden="true" class="ti ti-users"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col">
            <div class="card dashboard-card widget-card h-100 kpi-card">
                <a class="kpi-link" asp-controller="Invoices" asp-action="Index">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-1">@Model.MonthlyRevenue.ToString("C0")</h3>
                                <p class="mb-0 text-muted fs-sm">Monthly Revenue</p>
                            </div>
                            <div class="avatar-md">
                                <span class="avatar-title bg-warning-subtle text-warning rounded-circle fs-32">
                                    <i aria-hidden="true" class="ti ti-currency-dollar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col">
            <div class="card dashboard-card widget-card h-100 kpi-card">
                <a class="kpi-link" asp-controller="PhotoShoots" asp-action="Index">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-1">@Model.UpcomingPhotoshoots</h3>
                                <p class="mb-0 text-muted fs-sm">Upcoming Shoots</p>
                            </div>
                            <div class="avatar-md">
                                <span class="avatar-title bg-secondary-subtle text-secondary rounded-circle fs-32">
                                    <i aria-hidden="true" class="ti ti-calendar-stats"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col">
            <div class="card dashboard-card widget-card h-100 kpi-card">
                <a class="kpi-link" asp-controller="Invoices" asp-action="Index" asp-route-status="Pending">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-1">@Model.PendingInvoiceAmount.ToString("C0")</h3>
                                <p class="mb-0 text-muted fs-sm">Pending Revenue</p>
                            </div>
                            <div class="avatar-md">
                                <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-32">
                                    <i aria-hidden="true" class="ti ti-pig-money"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col">
            <div class="card dashboard-card widget-card h-100 kpi-card">
                <a class="kpi-link" asp-controller="PhotoShoots" asp-action="Index" asp-route-status="Completed">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-1">@Model.CompletedPhotoshoots</h3>
                                <p class="mb-0 text-muted fs-sm">Completed Shoots</p>
                            </div>
                            <div class="avatar-md">
                                <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-32">
                                    <i aria-hidden="true" class="ti ti-camera-spark"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>

    <!-- Top Row: 3 widgets (keeps 1/3 widths on XXL) -->
    <div class="row g-3 mb-3 dashboard-row" data-row="top-three">

        <!-- Upcoming Photo Shoots -->
        <div class="col-xxl-4 col-lg-6" data-widget-id="upcoming">
            <div class="card widget-card h-100">
                <div class="card-header widget-header">
                    <div class="d-flex align-items-center gap-2">
                        <span class="widget-title-icon bg-primary-subtle text-primary">
                            <i aria-hidden="true" class="ti ti-camera"></i>
                        </span>
                        <h5 class="card-title mb-0">Upcoming Shoots</h5>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <a asp-controller="PhotoShoots" asp-action="Create" class="btn btn-primary btn-sm widget-action">
                            <i aria-hidden="true" class="ti ti-plus me-1"></i> New
                        </a>

                        <button class="btn btn-sm btn-link text-muted p-0 widget-collapse"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#upcoming-body"
                                aria-expanded="true"
                                aria-controls="upcoming-body"
                                title="Collapse">
                            <i class="ti ti-chevron-up fs-lg"></i>
                        </button>
                    </div>
                </div>

                <div class="collapse show" id="upcoming-body">
                    <div class="card-body d-flex flex-column">
                        @if (Model.RecentPhotoshoots.Any())
                        {
                            <div class="widget-content flex-grow-1">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0 widget-table">
                                        <tbody>
                                        @foreach (var shoot in Model.RecentPhotoshoots.Take(3))
                                        {
                                            <tr class="widget-row cursor-pointer"
                                                role="button"
                                                tabindex="0"
                                                onclick="window.location='@Url.Action("Details", "PhotoShoots", new { id = shoot.Id })'"
                                                onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault(); this.click();}">
                                                <td class="widget-row-icon" style="width: 48px;">
                                                    <span class="widget-item-icon bg-primary-subtle text-primary" style="width: 34px; height: 34px; border-radius: 999px; display:inline-flex; align-items:center; justify-content:center;">
                                                        <i aria-hidden="true" class="ti ti-camera"></i>
                                                    </span>
                                                </td>
                                                <td class="widget-row-main">
                                                    <div class="fw-semibold">@shoot.Title</div>
                                                    <div class="text-muted small">
                                                        <i aria-hidden="true" class="ti ti-calendar me-1"></i>
                                                        @shoot.ScheduledDate.ToString("MMM dd, yyyy")
                                                    </div>
                                                </td>
                                                <td class="widget-row-end text-end" style="width: 24px;">
                                                    <i class="ti ti-chevron-right text-muted"></i>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="widget-footer mt-3">
                                <a asp-controller="PhotoShoots" asp-action="Index" class="widget-footer-link">
                                    View All Shoots <i class="ti ti-arrow-right"></i>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="widget-empty flex-grow-1 text-center py-4">
                                <i class="ti ti-camera-off fs-1 mb-2 opacity-50"></i>
                                <p class="mb-3">No upcoming shoots scheduled</p>
                                <a asp-controller="PhotoShoots" asp-action="Create" class="btn btn-primary btn-sm">
                                    Schedule a Shoot
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Invoices -->
        <div class="col-xxl-4 col-lg-6" data-widget-id="invoices">
            <div class="card widget-card h-100">
                <div class="card-header widget-header">
                    <div class="d-flex align-items-center gap-2">
                        <span class="widget-title-icon bg-primary-subtle text-primary">
                            <i aria-hidden="true" class="ti ti-file-invoice"></i>
                        </span>
                        <h5 class="card-title mb-0">Recent Invoices</h5>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <a asp-controller="Invoices" asp-action="Create" class="btn btn-primary btn-sm widget-action">
                            <i aria-hidden="true" class="ti ti-plus me-1"></i> New
                        </a>

                        <button class="btn btn-sm btn-link text-muted p-0 widget-collapse"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#invoices-body"
                                aria-expanded="true"
                                aria-controls="invoices-body"
                                title="Collapse">
                            <i class="ti ti-chevron-up fs-lg"></i>
                        </button>
                    </div>
                </div>

                <div class="collapse show" id="invoices-body">
