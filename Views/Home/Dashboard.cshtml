@using MyPhotoBiz.Models;
@using MyPhotoBiz.Enums;

@model MyPhotoBiz.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row mb-4">
    <!-- Total Clients Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex border-light justify-content-between align-items-center">
                <h5 class="card-title mb-0">Clients</h5>
                <span class="badge bg-primary-subtle text-primary">Total</span>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="avatar avatar-lg flex-shrink-0">
                        <a href="@Url.Action("Index", "Clients")" class="text-decoration-none">
                            <span class="avatar-title bg-primary-subtle text-primary rounded-circle">
                                <i class="ti ti-users fs-1"></i>
                            </span>
                        </a>
                    </div>
                    <div class="text-end">
                        <h3 class="mb-1 fw-semibold">@Model.TotalClients</h3>
                        <p class="mb-0 text-muted small">Total Clients</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end col -->
    <!-- Monthly Revenue Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex border-light justify-content-between align-items-center">
                <h5 class="card-title mb-0">Revenue</h5>
                <span class="badge bg-success-subtle text-success">Monthly</span>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="avatar avatar-lg flex-shrink-0">
                        <a href="@Url.Action("Index", "Invoices")" class="text-decoration-none">
                            <span class="avatar-title bg-success-subtle text-success rounded-circle">
                                <i class="ti ti-cash fs-1"></i>
                            </span>
                        </a>
                    </div>
                    <div class="text-end">
                        <h3 class="mb-1 fw-semibold">@Model.MonthlyRevenue.ToString("C")</h3>
                        <p class="mb-0 text-muted small">Monthly Revenue</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Shoots Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex border-light justify-content-between align-items-center">
                <h5 class="card-title mb-0">Photoshoots</h5>
                <span class="badge bg-info-subtle text-info">Upcoming</span>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="avatar avatar-lg flex-shrink-0">
                        <a href="@Url.Action("Index", "PhotoShoots")" class="text-decoration-none">
                            <span class="avatar-title bg-info-subtle text-info rounded-circle">
                                <i class="ti ti-camera fs-1"></i>
                            </span>
                        </a>
                    </div>
                    <div class="text-end">
                        <h3 class="mb-1 fw-semibold">@Model.UpcomingPhotoshoots</h3>
                        <p class="mb-0 text-muted small">Upcoming Shoots</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pending Invoice Amount Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex border-light justify-content-between align-items-center">
                <h5 class="card-title mb-0">Pending Revenue</h5>
                <span class="badge bg-warning-subtle text-warning">Outstanding</span>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="avatar avatar-lg flex-shrink-0">
                        <a href="@Url.Action("Index", "Invoices")" class="text-decoration-none">
                            <span class="avatar-title bg-warning-subtle text-warning rounded-circle">
                                <i class="ti ti-file-invoice fs-1"></i>
                            </span>
                        </a>
                    </div>
                    <div class="text-end">
                        <h3 class="mb-1 fw-semibold">@Model.PendingInvoiceAmount.ToString("C")</h3>
                        <p class="mb-0 text-muted small">Outstanding Invoices</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Revenue Overview Chart -->
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="card">
            <div class="card-header border-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Revenue Overview</h5>
                <span class="badge bg-primary-subtle text-primary">Last 6 Months</span>
            </div>
            <div class="card-body">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Photo Shoots -->
    <div class="col-xl-4 col-lg-5 mb-4">
        <div class="card">
            <div class="card-header border-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Upcoming Photo Shoots</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentPhotoshoots.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var shoot in Model.RecentPhotoshoots)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex align-items-start mb-2">
                                    <div class="avatar avatar-sm bg-primary-subtle flex-shrink-0">
                                        <span class="avatar-title text-primary rounded-circle">
                                            <i class="ti ti-camera"></i>
                                        </span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="small text-muted mb-1">
                                            <i class="ti ti-calendar me-1"></i>@shoot.ScheduledDate.ToString("MMM dd, yyyy")
                                        </div>
                                        <h6 class="mb-1">@shoot.Title</h6>
                                        <div class="small text-muted">
                                            <i class="ti ti-user me-1"></i>@shoot.Client?.FullName
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0">
                                        @{
                                            var statusBadge = (PhotoShootStatus)shoot.Status == PhotoShootStatus.Completed
                                                ? "bg-success-subtle text-success"
                                                : (PhotoShootStatus)shoot.Status == PhotoShootStatus.Scheduled
                                                    ? "bg-primary-subtle text-primary"
                                                    : "bg-secondary-subtle text-secondary";
                                        }
                                        <span class="badge @statusBadge">@shoot.Status</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="avatar avatar-lg bg-light mb-3 mx-auto">
                            <span class="avatar-title">
                                <i class="ti ti-calendar-off fs-1 text-muted"></i>
                            </span>
                        </div>
                        <p class="text-muted mb-0">No upcoming photo shoots</p>
                    </div>
                }
            </div>
            <div class="card-footer border-light bg-transparent">
                <a asp-controller="PhotoShoots" asp-action="Index" class="btn btn-light w-100">
                    <i class="ti ti-eye me-1"></i>View All Shoots
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
        <script>
            const ctx = document.getElementById('revenueChart').getContext('2d');
            const revenueChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyRevenueData.Keys)),
                    datasets: [{
                        label: 'Revenue',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyRevenueData.Values)),
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'top' },
                        title: { display: true, text: 'Monthly Revenue' }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        </script>
}

