@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dashboard Widget Management
        const STORAGE_KEY = 'dashboardWidgetPrefs';

        // Get saved preferences from localStorage
        function getWidgetPrefs() {
            try {
                const saved = localStorage.getItem(STORAGE_KEY);
                return saved ? JSON.parse(saved) : null;
            } catch (e) {
                return null;
            }
        }

        // Save preferences to localStorage
        function saveWidgetPrefs(prefs) {
            try {
                localStorage.setItem(STORAGE_KEY, JSON.stringify(prefs));
            } catch (e) {
                console.warn('Could not save widget preferences');
            }
        }

        // Get current widget state
        function getCurrentPrefs() {
            const prefs = { visibility: {}, collapsed: {} };

            // Get visibility state from checkboxes
            document.querySelectorAll('.widget-toggle').forEach(function(checkbox) {
                prefs.visibility[checkbox.dataset.widget] = checkbox.checked;
            });

            // Get collapse state from collapse elements
            document.querySelectorAll('[data-widget-id]').forEach(function(widget) {
                const collapseEl = widget.querySelector('.collapse');
                if (collapseEl) {
                    prefs.collapsed[widget.dataset.widgetId] = !collapseEl.classList.contains('show');
                }
            });

            return prefs;
        }

        // Apply widget preferences
        function applyWidgetPrefs(prefs) {
            if (!prefs) return;

            // Apply visibility
            if (prefs.visibility) {
                Object.keys(prefs.visibility).forEach(function(widgetId) {
                    const visible = prefs.visibility[widgetId];
                    const widget = document.querySelector('[data-widget-id="' + widgetId + '"]');
                    const toggle = document.querySelector('.widget-toggle[data-widget="' + widgetId + '"]');

                    if (widget) {
                        widget.classList.toggle('widget-hidden', !visible);
                    }
                    if (toggle) {
                        toggle.checked = visible;
                    }
                });
            }

            // Apply collapse state
            if (prefs.collapsed) {
                Object.keys(prefs.collapsed).forEach(function(widgetId) {
                    const isCollapsed = prefs.collapsed[widgetId];
                    const collapseEl = document.getElementById(widgetId + '-body');
                    const collapseBtn = document.querySelector('[data-bs-target="#' + widgetId + '-body"]');

                    if (collapseEl && isCollapsed) {
                        collapseEl.classList.remove('show');
                        if (collapseBtn) {
                            collapseBtn.setAttribute('aria-expanded', 'false');
                            collapseBtn.classList.add('collapsed');
                        }
                    }
                });
            }
        }

        // Toggle widget visibility
        function toggleWidget(widgetId, visible) {
            const widget = document.querySelector('[data-widget-id="' + widgetId + '"]');
            if (widget) {
                widget.classList.toggle('widget-hidden', !visible);
            }

            // Save updated preferences
            saveWidgetPrefs(getCurrentPrefs());
        }

        // Reset all widgets to default (all visible, all expanded)
        function resetDashboardWidgets() {
            // Show all widgets
            document.querySelectorAll('[data-widget-id]').forEach(function(widget) {
                widget.classList.remove('widget-hidden');
            });

            // Check all toggles
            document.querySelectorAll('.widget-toggle').forEach(function(checkbox) {
                checkbox.checked = true;
            });

            // Expand all collapsed sections
            document.querySelectorAll('.collapse').forEach(function(collapseEl) {
                if (!collapseEl.classList.contains('show')) {
                    var bsCollapse = bootstrap.Collapse.getOrCreateInstance(collapseEl, { toggle: false });
                    bsCollapse.show();
                }
            });

            // Clear saved preferences
            localStorage.removeItem(STORAGE_KEY);
        }

        // Initialize widget management
        document.addEventListener('DOMContentLoaded', function() {
            // Load and apply saved preferences
            var savedPrefs = getWidgetPrefs();
            if (savedPrefs) {
                applyWidgetPrefs(savedPrefs);
            }

            // Handle widget toggle checkboxes
            document.querySelectorAll('.widget-toggle').forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    toggleWidget(this.dataset.widget, this.checked);
                });
            });

            // Handle collapse events to save state
            document.querySelectorAll('.collapse').forEach(function(collapseEl) {
                collapseEl.addEventListener('hidden.bs.collapse', function() {
                    saveWidgetPrefs(getCurrentPrefs());
                });
                collapseEl.addEventListener('shown.bs.collapse', function() {
                    saveWidgetPrefs(getCurrentPrefs());
                });
            });

            // Revenue Chart
            var ctx = document.getElementById('revenue-chart');
            if (ctx) {
                var revenueData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyRevenueData));
                var labels = Object.keys(revenueData);
                var values = Object.values(revenueData);

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels.slice(-6),
                        datasets: [{
                            label: 'Revenue',
                            data: values.slice(-6),
                            backgroundColor: 'rgba(79, 70, 229, 0.8)',
                            borderRadius: 4,
                            barThickness: 24
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '$' + value.toLocaleString();
                                    }
                                },
                                grid: { drawBorder: false }
                            },
                            x: {
                                grid: { display: false }
                            }
                        }
                    }
                });
            }
        });
    </script>
}
