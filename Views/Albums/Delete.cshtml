@model MyPhotoBiz.Models.Album

@{
    ViewBag.Purpose = "Confirm delete album.";
    ViewBag.Title = "Delete";
    ViewBag.PageTitle = "Delete Album";
    ViewBag.SubTitle = "Albums";
    ViewBag.SubTitleUrl = Url.Action("Index", "Albums");
    ViewBag.Icon = "ti-folder-x";
    ViewBag.Color = "danger";
    ViewBag.BackUrl = Url.Action("Index", "Albums");
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row justify-content-center">
        <div class="col-xxl-8">
            <div class="card border-danger">
                <div class="card-header bg-danger-subtle">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="ti ti-alert-triangle me-2"></i>Delete Album
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="ti ti-alert-circle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. All photos in this album will also be deleted.
                    </div>

                    <h5 class="mb-3">Are you sure you want to delete this album?</h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-3">Album Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Visibility</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsPublic)
                            {
                                <span class="badge bg-success-subtle text-success">Public</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary">Private</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Photo Shoot</dt>
                        <dd class="col-sm-9">@Model.PhotoShoot?.Title</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="ti ti-x me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="ti ti-trash me-1"></i>Delete Album
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
