<!-- Views/PrintOrder/CartPreview.cshtml -->
@using MyPhotoBiz.Models
@model List<Photo>
@{
    ViewData["Title"] = "Print Order Cart";
    var sessionToken = ViewBag.SessionToken;
    var printPrices = (List<PrintPricing>)ViewBag.PrintPrices;
    var brandColor = ViewBag.BrandColor ?? "#2c3e50";
}

<style>
    .cart-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 20px;
    }

    .cart-header {
        background: linear-gradient(135deg, @Html.Raw(brandColor) 0%, #333 100%);
        color: white;
        padding: 30px;
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .cart-items {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .cart-item {
        background: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .cart-item-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .cart-item-details {
        padding: 15px;
    }

    .print-options {
        margin-top: 15px;
    }

    .option-row {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 10px;
        margin-bottom: 10px;
    }

    .option-row select,
    .option-row input {
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .item-price {
        font-weight: 600;
        color: @Html.Raw(brandColor);
        margin-top: 10px;
    }

    .checkout-form {
        background: white;
        padding: 30px;
        border-radius: 8px;
        max-width: 600px;
        margin: 30px auto;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .checkout-form h2 {
        margin-bottom: 20px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .order-summary {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .summary-total {
        border-top: 2px solid #ddd;
        padding-top: 10px;
        font-weight: 600;
        font-size: 18px;
        color: @Html.Raw(brandColor);
    }

    .btn-checkout {
        width: 100%;
        padding: 15px;
        background: @Html.Raw(brandColor);
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-checkout:hover {
        opacity: 0.9;
    }
</style>

<div class="cart-container">
    <div class="cart-header">
        <h1>Order Prints</h1>
        <p>Select sizes, finishes, and quantities for your favorite photos</p>
    </div>

    @if (Model.Count == 0)
    {
        <div style="text-align: center; padding: 40px; background: white; border-radius: 8px;">
            <h3>No favorites selected</h3>
            <p>Go back to the gallery and mark some photos as favorites first.</p>
            <a href="/Gallery/View?sessionToken=@sessionToken" class="btn-control">‚Üê Back to Gallery</a>
        </div>
    }
    else
    {
        <div class="cart-items">
            @foreach (var photo in Model)
            {
                <div class="cart-item">
                    <img src="@photo.ThumbnailPath" alt="@photo.Title" class="cart-item-image">
                    <div class="cart-item-details">
                        <strong>@photo.Title</strong>
                        <div class="print-options">
                            <div class="option-row">
                                <select class="size-select" data-photo="@photo.Id">
                                    <option value="">Select Size</option>
                                    <option value="4x6">4x6</option>
                                    <option value="5x7">5x7</option>
                                    <option value="8x10">8x10</option>
                                    <option value="11x14">11x14</option>
                                </select>
                                <select class="finish-select" data-photo="@photo.Id">
                                    <option value="">Select Finish</option>
                                    <option value="Glossy">Glossy</option>
                                    <option value="Matte">Matte</option>
                                </select>
                                <input type="number" class="qty-input" data-photo="@photo.Id" min="1" value="1" placeholder="Qty">
                            </div>
                            <button onclick="addToCart(@photo.Id)" style="width: 100%; padding: 10px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <form method="post" action="/PrintOrder/PlaceOrder" class="checkout-form">
            <input type="hidden" name="sessionToken" value="@sessionToken">
            <h2>Shipping Information</h2>

            <div class="form-group">
                <label for="clientName">Full Name</label>
                <input type="text" id="clientName" name="clientName" required>
            </div>

            <div class="form-group">
                <label for="clientEmail">Email</label>
                <input type="email" id="clientEmail" name="clientEmail" required>
            </div>

            <div class="form-group">
                <label for="clientPhone">Phone</label>
                <input type="tel" id="clientPhone" name="clientPhone" required>
            </div>

            <div class="order-summary">
                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span id="subtotal">$0.00</span>
                </div>
                <div class="summary-row">
                    <span>Shipping:</span>
                    <span id="shipping">$5.00</span>
                </div>
                <div class="summary-row summary-total">
                    <span>Total:</span>
                    <span id="total">$5.00</span>
                </div>
            </div>

            <button type="submit" class="btn-checkout">Place Order</button>
        </form>
    }
</div>

<script>
    const prices = @Html.Raw(Json.Serialize(ViewBag.PrintPrices));
    let cartItems = [];

    function addToCart(photoId) {
        const size = document.querySelector(`.size-select[data-photo="${photoId}"]`).value;
        const finish = document.querySelector(`.finish-select[data-photo="${photoId}"]`).value;
        const qty = document.querySelector(`.qty-input[data-photo="${photoId}"]`).value;

        if (!size || !finish) {
            alert('Please select size and finish');
            return;
        }

        cartItems.push({ photoId, size, finish, qty: parseInt(qty) });
        updateTotal();
        alert('Added to cart!');
    }

    function updateTotal() {
        let total = 5; // shipping
        cartItems.forEach(item => {
            const price = prices.find(p => p.size === item.size && p.finishType === item.finish);
            if (price) total += price.price * item.qty;
        });

        document.getElementById('subtotal').textContent = `$${(total - 5).toFixed(2)}`;
        document.getElementById('total').textContent = `$${total.toFixed(2)}`;
    }

    // Prepare form submission
    document.querySelector('form').addEventListener('submit', function(e) {
        if (cartItems.length === 0) {
            e.preventDefault();
            alert('Please add items to your cart');
            return;
        }

        // Add items as hidden inputs
        cartItems.forEach((item, idx) => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = `Items[${idx}].PhotoId`;
            input.value = item.photoId;
            this.appendChild(input);

            const input2 = document.createElement('input');
            input2.type = 'hidden';
            input2.name = `Items[${idx}].Size`;
            input2.value = item.size;
            this.appendChild(input2);

            const input3 = document.createElement('input');
            input3.type = 'hidden';
            input3.name = `Items[${idx}].FinishType`;
            input3.value = item.finish;
            this.appendChild(input3);

            const input4 = document.createElement('input');
            input4.type = 'hidden';
            input4.name = `Items[${idx}].Quantity`;
            input4.value = item.qty;
            this.appendChild(input4);
        });
    });
</script>