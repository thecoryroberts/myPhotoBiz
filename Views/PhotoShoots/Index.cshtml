@using MyPhotoBiz.Enums
@using MyPhotoBiz.Models;
@model IEnumerable<PhotoShoot>
@{
    ViewBag.Title = "Photo Shoots";
    ViewBag.PageTitle = "Photo Shoot Management";
    ViewBag.Icon = "ti-camera";
    ViewBag.Color = "warning";
    ViewBag.ActionUrl = Url.Action("Calendar", "PhotoShoots");
    ViewBag.ActionText = "Calendar View";
    ViewBag.ActionIcon = "ti-calendar";
    ViewBag.ActionColor = "light";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row justify-content-center">
        <div class="col-xxl-10">
            <div data-table data-table-rows-per-page="10" class="card">
                <div class="card-header border-light justify-content-between">
                    <div class="d-flex gap-2">
                        <div class="app-search">
                            <input data-table-search type="text" class="form-control" placeholder="Search photo shoots...">
                            <i data-lucide="search" class="app-search-icon text-muted"></i>
                        </div>

                        <button id="deleteSelectedBtn" data-table-delete-selected class="btn btn-danger d-none">
                            <i class="ti ti-trash me-2"></i>Delete Selected
                        </button>

                        <a asp-action="Create" class="btn btn-purple rounded-circle btn-icon">
                            <i class="ti ti-plus fs-lg"></i>
                        </a>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <span class="me-2 fw-semibold">Show:</span>

                        <!-- Records Per Page -->
                        <div>
                            <select data-table-set-rows-per-page class="form-select form-control my-1 my-md-0">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Alert Container -->
                <div id="alertContainer"></div>

                <div class="table-responsive">
                    <table class="table table-custom table-centered table-select table-hover w-100 mb-0">
                        <thead class="bg-light bg-opacity-25 thead-sm">
                            <tr class="text-uppercase fs-xxs">
                                <th scope="col" class="th-checkbox">
                                    <input data-table-select-all class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" id="checkAll">
                                </th>
                                <th data-table-sort="title">Title</th>
                                <th data-table-sort="client">Client</th>
                                <th data-table-sort="scheduledDate">Scheduled Date</th>
                                <th data-table-sort="location">Location</th>
                                <th data-table-sort="status">Status</th>
                                <th data-table-sort="price">Price</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var shoot in Model)
                            {
                                <tr data-shoot-id="@shoot.Id">
                                    <td>
                                        <input class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" value="@shoot.Id">
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-start align-items-center gap-2">
                                            <div class="avatar avatar-sm">
                                                <span class="avatar-title bg-info-subtle text-info rounded-circle">
                                                    <i class="ti ti-camera"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <h5 class="text-nowrap mb-0 lh-base fs-base">
                                                    <a data-sort="title" asp-controller="PhotoShoots" asp-action="Details" asp-route-id="@shoot.Id" class="link-reset">
                                                        @shoot.Title
                                                    </a>
                                                </h5>
                                                <p class="text-muted fs-xs mb-0">@shoot.Location</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-sort="client">@shoot.ClientProfile?.User?.FirstName @shoot.ClientProfile?.User?.LastName</td>
                                    <td data-sort="scheduledDate">@shoot.ScheduledDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td data-sort="location">@shoot.Location</td>
                                    <td data-sort="status">
                                        <span class="badge badge-@(shoot.Status == PhotoShootStatus.Completed ? "success" : shoot.Status == PhotoShootStatus.Scheduled ? "primary" : shoot.Status == PhotoShootStatus.InProgress ? "warning" : "secondary")">
                                            @shoot.Status
                                        </span>
                                    </td>
                                    <td data-sort="price">@shoot.Price.ToString("C")</td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center gap-1">
                                            <a asp-controller="PhotoShoots" asp-action="Details" asp-route-id="@shoot.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="View Details">
                                                <i class="ti ti-eye fs-lg"></i>
                                            </a>
                                            <a asp-controller="PhotoShoots" asp-action="Edit" asp-route-id="@shoot.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="Edit">
                                                <i class="ti ti-edit fs-lg"></i>
                                            </a>
                                            <button type="button" class="btn btn-light btn-icon btn-sm rounded-circle delete-btn"
                                                    onclick="showDeleteModal('/api/photoshoots/@shoot.Id', '@shoot.Title')"
                                                    title="Delete">
                                                <i class="ti ti-trash fs-lg"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div data-table-pagination-info="photo shoots"></div>
                        <div data-table-pagination></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-semibold">Delete Photo Shoot</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="d-flex align-items-start gap-3">
                    <div class="avatar avatar-sm flex-shrink-0">
                        <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-lg">
                            <i class="ti ti-alert-triangle"></i>
                        </span>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-2 fw-semibold">Are you sure?</h6>
                        <p class="text-muted fs-sm mb-2">You are about to delete:</p>
                        <p id="deleteItemName" class="fw-semibold text-dark mb-0"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn" onclick="performDelete()">
                    <i class="ti ti-trash me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <!-- Custom table -->
    <script src="~/js/pages/custom-table.js"></script>
    
    <script>
        let deleteUrl = '';
        let deleteItemName = '';

        // Show delete modal
        function showDeleteModal(url, itemName) {
            deleteUrl = url;
            deleteItemName = itemName;
            document.getElementById('deleteItemName').textContent = itemName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Perform delete via AJAX
        async function performDelete() {
            if (!deleteUrl) return;

            const btn = document.getElementById('confirmDeleteBtn');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';

            try {
                const response = await fetch(deleteUrl, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const data = await response.json();

                if (!response.ok) {
                    showAlert(data.message || 'Error deleting photo shoot', 'danger');
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                    return;
                }

                showAlert(`Photo shoot "${deleteItemName}" deleted successfully`, 'success');
                
                // Close modal
                bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                
                // Reload page after 1 second
                setTimeout(() => {
                    location.reload();
                }, 1000);

            } catch (error) {
                console.error('Delete error:', error);
                showAlert('An unexpected error occurred', 'danger');
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        // Show alert message
        function showAlert(message, type = 'info') {
            const alertHtml = `
                <div class="alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show m-3" role="alert">
                    <div class="d-flex align-items-start gap-2">
                        <i class="ti ti-${type === 'success' ? 'check-circle' : 'alert-circle'} fs-lg flex-shrink-0 mt-1"></i>
                        <div class="flex-grow-1">
                            <strong>${type === 'success' ? 'Success!' : 'Error!'}</strong>
                            <p class="mb-0 fs-sm">${message}</p>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </alert>
            `;
            
            const container = document.getElementById('alertContainer');
            if (container) {
                container.innerHTML = alertHtml;
                // Scroll to top to show alert
                container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
        }

        // Handle bulk delete for selected rows
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            const deleteSelectedBtn = document.getElementById('deleteSelectedBtn');
            
            if (checkboxes.length > 0) {
                checkboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', function() {
                        const checkedCount = document.querySelectorAll('tbody input[type="checkbox"]:checked').length;
                        deleteSelectedBtn.classList.toggle('d-none', checkedCount === 0);
                    });
                });

                deleteSelectedBtn.addEventListener('click', function() {
                    const selected = Array.from(document.querySelectorAll('tbody input[type="checkbox"]:checked'))
                        .map(cb => cb.value);
                    
                    if (selected.length === 0) return;

                    if (confirm(`Delete ${selected.length} photo shoot(s)?`)) {
                        deleteMultiple(selected);
                    }
                });
            }
        });

        // Delete multiple photo shoots
        async function deleteMultiple(ids) {
            const btn = document.getElementById('deleteSelectedBtn');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';

            try {
                let successCount = 0;
                let errorCount = 0;

                for (const id of ids) {
                    try {
                        const response = await fetch(`/api/photoshoots/${id}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json',
                            }
                        });

                        if (response.ok) {
                            successCount++;
                            // Remove row from table
                            const row = document.querySelector(`tr[data-shoot-id="${id}"]`);
                            if (row) row.remove();
                        } else {
                            errorCount++;
                        }
                    } catch (error) {
                        errorCount++;
                    }
                }

                if (successCount > 0) {
                    showAlert(`${successCount} photo shoot(s) deleted successfully${errorCount > 0 ? `, ${errorCount} failed` : ''}`, 'success');
                } else if (errorCount > 0) {
                    showAlert(`Error deleting photo shoots`, 'danger');
                }

                btn.disabled = false;
                btn.innerHTML = originalText;
                btn.classList.add('d-none');

                // Reload after delay
                setTimeout(() => {
                    location.reload();
                }, 1500);

            } catch (error) {
                console.error('Bulk delete error:', error);
                showAlert('An unexpected error occurred', 'danger');
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }
    </script>
}