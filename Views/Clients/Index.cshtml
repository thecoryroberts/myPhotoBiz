@using MyPhotoBiz.Models
@model IEnumerable<ClientProfile>
@{
    ViewBag.Title = "Clients";
    ViewBag.PageTitle = "Client Management";
    ViewBag.Icon = "ti-users";
    ViewBag.Color = "primary";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row">
        <div class="col-12">
            <div data-table data-table-rows-per-page="10" class="card">
                <div class="card-header border-light justify-content-between">
                    <div class="d-flex gap-2">
                        <div class="app-search">
                            <input data-table-search type="text" class="form-control" placeholder="Search clients...">
                            <i data-lucide="search" class="app-search-icon text-muted"></i>
                        </div>

                        <button data-table-delete-selected class="btn btn-danger d-none">Delete</button>

                        <button type="button" class="btn btn-secondary rounded-circle btn-icon" data-bs-toggle="modal" data-bs-target="#createClientModal">
                            <i class="ti ti-plus fs-lg"></i>
                        </button>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <span class="me-2 fw-semibold">Show:</span>

                        <!-- Records Per Page -->
                        <div>
                            <select data-table-set-rows-per-page class="form-select form-control my-1 my-md-0">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>
                </div>

                @if (!Model.Any())
                {
                    <!-- Empty State -->
                    <div class="card-body text-center py-5">
                        <div class="empty-state">
                            <div class="empty-state-icon bg-primary-subtle rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                                <i class="ti ti-users fs-1 text-primary"></i>
                            </div>
                            <h4 class="mb-2">No clients yet</h4>
                            <p class="text-muted mb-4">Get started by adding your first client to manage their photo shoots, invoices, and galleries.</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createClientModal">
                                <i class="ti ti-plus me-1"></i> Add Your First Client
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-custom table-centered table-select table-hover w-100 mb-0">
                            <thead class="bg-opacity-25 thead-sm">
                                <tr class="text-uppercase fs-xxs">
                                    <th scope="col" class="th-checkbox">
                                        <input data-table-select-all class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" id="checkAll">
                                    </th>
                                    <th data-table-sort="name">Name</th>
                                    <th data-table-sort>Email</th>
                                    <th data-table-sort>Phone</th>
                                    <th data-table-sort>Client Since</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in Model)
                                {
                                    <tr>
                                        <td>
                                            <input class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" value="@client.Id">
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-start align-items-center gap-2">
                                                <div class="avatar avatar-sm">
                                                    <span class="avatar-title bg-primary-subtle text-primary rounded-circle">
@{
    var firstName = !string.IsNullOrEmpty(client.User?.FirstName) ? client.User.FirstName.Substring(0, 1) : "";
    var lastName = !string.IsNullOrEmpty(client.User?.LastName) ? client.User.LastName.Substring(0, 1) : "";
}
                                                        @firstName@lastName
                                                    </span>
                                                </div>
                                                <div>
                                                    <h5 class="text-nowrap mb-0 lh-base fs-base">
                                                        <a data-sort="name" asp-action="Details" asp-route-id="@client.Id" class="link-reset">
                                                            @client.User?.FirstName @client.User?.LastName
                                                        </a>
                                                    </h5>
                                                    <p class="text-muted fs-xs mb-0">@client.Address</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@client.User?.Email</td>
                                        <td>@(string.IsNullOrWhiteSpace(client.PhoneNumber) ? "-" : client.PhoneNumber)</td>
                                        <td>@client.CreatedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <div class="d-flex align-items-center justify-content-center gap-1">
                                                <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="View Details">
                                                    <i class="ti ti-eye fs-lg"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-light btn-icon btn-sm rounded-circle" title="Edit">
                                                    <i class="ti ti-edit fs-lg"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-light btn-icon btn-sm rounded-circle delete-client" title="Delete" data-client-name="@client.User?.FirstName @client.User?.LastName">
                                                    <i class="ti ti-trash fs-lg"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div data-table-pagination-info="clients"></div>
                            <div data-table-pagination></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

<!-- Create Client Modal -->
<div class="modal fade" id="createClientModal" tabindex="-1" aria-labelledby="createClientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createClientModalLabel">Create New Client</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createClientForm" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" id="FirstName" name="FirstName" class="form-control" required />
                                <span class="text-danger field-validation-error" data-valmsg-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" id="LastName" name="LastName" class="form-control" required />
                                <span class="text-danger field-validation-error" data-valmsg-for="LastName"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" id="Email" name="Email" class="form-control" required />
                        <span class="text-danger field-validation-error" data-valmsg-for="Email"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="PhoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" />
                        <span class="text-danger field-validation-error" data-valmsg-for="PhoneNumber"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <textarea id="Address" name="Address" class="form-control" rows="3"></textarea>
                        <span class="text-danger field-validation-error" data-valmsg-for="Address"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="createClientBtn">
                        <span class="btn-text">
                            <i class="ti ti-check me-1"></i> Create Client
                        </span>
                        <span class="btn-loading d-none">
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            Creating...
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <!-- Custom table -->
    <script src="~/js/pages/custom-table.js"></script>
    
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Handle delete confirmation
            document.querySelectorAll('.delete-client').forEach(function(link) {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    var clientName = this.getAttribute('data-client-name');
                    var href = this.href;

                    confirmDelete(clientName, function() {
                        window.location.href = href;
                    });
                });
            });

            // Reset form when modal is closed
            var createModal = document.getElementById('createClientModal');
            createModal.addEventListener('hidden.bs.modal', function () {
                document.getElementById('createClientForm').reset();
                // Clear validation messages
                document.querySelectorAll('.field-validation-error').forEach(function(el) {
                    el.textContent = '';
                });
            });

            // Handle form submission with loading state
            document.getElementById('createClientForm').addEventListener('submit', function(e) {
                var submitBtn = document.getElementById('createClientBtn');
                var btnText = submitBtn.querySelector('.btn-text');
                var btnLoading = submitBtn.querySelector('.btn-loading');

                // Show loading state
                submitBtn.disabled = true;
                btnText.classList.add('d-none');
                btnLoading.classList.remove('d-none');

                if (!this.checkValidity()) {
                    e.preventDefault();
                    // Reset button state
                    submitBtn.disabled = false;
                    btnText.classList.remove('d-none');
                    btnLoading.classList.add('d-none');
                    e.stopPropagation();
                    return;
                }
                
                // Optional: You can add AJAX submission here for seamless experience
                // Otherwise, it will submit normally and redirect
            });
        });
    </script>
}