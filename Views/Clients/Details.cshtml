@using MyPhotoBiz.Models
@model MyPhotoBiz.ViewModels.ClientDetailsViewModel
@{
    ViewBag.Title = "Client Details";
    ViewBag.SubTitle = "Clients";
}

<div class="container-fluid">

    @await Html.PartialAsync("~/Views/Shared/Partials/_PageTitle.cshtml")

    <div class="row justify-content-center">
        <div class="col-xxl-10">
            <div class="row">
                <!-- Main Info Card -->
                <div class="col-xl-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-3 mb-4">
                                @{
                                    var firstInitial = !string.IsNullOrEmpty(Model.FirstName) ?
                                    Model.FirstName[0].ToString() : "";
                                    var lastInitial = !string.IsNullOrEmpty(Model.LastName) ? Model.LastName[0].ToString() :
                                    "";
                                    var avatarUrl = Model.User?.ProfilePicture;
                                }

                                <div class="me-3">
                                    @if (!string.IsNullOrEmpty(avatarUrl))
                                    {
                                        <img src="@Url.Content(avatarUrl)" alt="Profile" class="rounded-circle"
                                            style="width:72px;height:72px;object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <div class="avatar avatar-lg">
                                            <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-3"
                                                style="width:72px;height:72px;display:inline-flex;align-items:center;justify-content:center;">
                                                @firstInitial@lastInitial
                                            </span>
                                        </div>
                                    }
                                </div>

                                <div class="flex-grow-1">
                                    <h3 class="mb-1">@Model.FirstName @Model.LastName</h3>
                                    <p class="text-muted mb-1">@Model.Email</p>
                                    <small class="text-muted">Client since @Model.CreatedDate.ToString("MMMM                                        yyyy")</small>
                                </div>

                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                        <i class="ti ti-edit me-1"></i> Edit
                                    </a>
                                    <a asp-action="Index" class="btn btn-light">
                                        <i class="ti ti-arrow-left me-1"></i> Back
                                    </a>
                                </div>
                            </div>

                            <hr class="my-4">

                            <!-- Contact Information -->
                            <h5 class="mb-3">Contact Information</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label text-muted fw-semibold">Email Address</label>
                                    <p class="mb-0">@Model.Email</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted fw-semibold">Phone Number</label>
                                    <p class="mb-0">@(Model.PhoneNumber ?? "Not provided")</p>
                                </div>
                            </div>

                            <!-- Address Information -->
                            @if (!string.IsNullOrWhiteSpace(Model.Address))
                            {
                                <h5 class="mb-3 mt-4">Address</h5>
                                <div class="row g-3 mb-4">
                                    <div class="col-12">
                                        <label class="form-label text-muted fw-semibold">Street Address</label>
                                        <p class="mb-0">@Model.Address</p>
                                    </div>
                                </div>
                            }

                            <!-- Additional Notes -->
                            @if (!string.IsNullOrWhiteSpace(Model.Notes))
                            {
                                <h5 class="mb-3 mt-4">Notes</h5>
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-0">@Model.Notes</p>
                                </div>
                            }

                            <!-- Metadata -->
                            <div class="row g-3 mt-4 pt-4 border-top">
                                <div class="col-md-6">
                                    <label class="form-label text-muted fw-semibold">Client Since</label>
                                    @(Model.CreatedDate != DateTime.MinValue ? Model.CreatedDate.ToString("MMMM dd, yyyy") :
                                                                        "N/A")
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted fw-semibold">Last Updated</label>
                                    @(Model.UpdatedDate != DateTime.MinValue ? Model.UpdatedDate.ToString("MMMM dd, yyyy") :
                                                                        "N/A")
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Photo Shoots Card -->
                    @if (Model.PhotoShoots != null && Model.PhotoShoots.Any())
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Photo Shoots</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="bg-light">
                                            <tr class="text-uppercase fs-xxs">
                                                <th>Title</th>
                                                <th>Date</th>
                                                <th>Location</th>
                                                <th>Status</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var shoot in Model.PhotoShoots.OrderByDescending(s =>
                                                                                    s.ScheduledDate))
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@shoot.Title</strong>
                                                    </td>
                                                    <td>@shoot.ScheduledDate.ToString("MMM dd, yyyy")</td>
                                                    <td>@(shoot.Location ?? "N/A")</td>
                                                    <td>
                                                        @switch (shoot.Status)
                                                        {
                                                            case PhotoShootStatus.Scheduled:
                                                                <span class="badge bg-info-subtle text-info">Scheduled</span>
                                                                break;
                                                            case PhotoShootStatus.Completed:
                                                                <span class="badge bg-success-subtle text-success">Completed</span>
                                                                break;
                                                            case PhotoShootStatus.Cancelled:
                                                                <span class="badge bg-danger-subtle text-danger">Cancelled</span>
                                                                break;
                                                            case PhotoShootStatus.InProgress:
                                                            default:
                                                                <span class="badge bg-warning-subtle text-warning">Pending</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <a asp-controller="PhotoShoots" asp-action="Details"
                                                            asp-route-id="@shoot.Id"
                                                            class="btn btn-light btn-icon btn-sm rounded-circle">
                                                            <i class="ti ti-eye fs-lg"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Invoices Card -->
                    @if (Model.Invoices != null && Model.Invoices.Any())
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Invoices</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="bg-light">
                                            <tr class="text-uppercase fs-xxs">
                                                <th>Invoice #</th>
                                                <th>Date</th>
                                                <th>Due Date</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var invoice in Model.Invoices.OrderByDescending(i => i.InvoiceDate))
                                            {
                                                <tr>
                                                    <td><strong>@invoice.InvoiceNumber</strong></td>
                                                    <td>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                                    <td>@invoice.DueDate.ToString("MMM dd, yyyy")</td>
                                                    <td><strong>@((invoice.Amount + invoice.Tax).ToString("C"))</strong></td>
                                                    <td>
                                                        @switch (invoice.Status.ToString())
                                                        {
                                                            case "Paid":
                                                                <span class="badge bg-success-subtle text-success">Paid</span>
                                                                break;
                                                            case "Overdue":
                                                                <span class="badge bg-danger-subtle text-danger">Overdue</span>
                                                                break;
                                                            case "Pending":
                                                                <span class="badge bg-warning-subtle text-warning">Pending</span>
                                                                break;
                                                            default:
                                                                <span class="badge bg-info-subtle text-info">@invoice.Status</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <a asp-controller="Invoices" asp-action="Details"
                                                            asp-route-id="@invoice.Id"
                                                            class="btn btn-light btn-icon btn-sm rounded-circle">
                                                            <i class="ti ti-eye fs-lg"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar Actions -->
                <div class="col-xl-4">
                    <div class="card card-top-sticky">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-column gap-2">
                                <a asp-controller="PhotoShoots" asp-action="Create" asp-route-clientId="@Model.Id"
                                    class="btn btn-success">
                                    <i class="ti ti-camera me-1"></i> Schedule Photo Shoot
                                </a>
                                <a asp-controller="Invoices" asp-action="Create" asp-route-clientId="@Model.Id"
                                    class="btn btn-primary">
                                    <i class="ti ti-file-invoice me-1"></i> Create Invoice
                                </a>
                                <a href="mailto:@Model.Email" class="btn btn-light">
                                    <i class="ti ti-mail me-1"></i> Send Email
                                </a>
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber" class="btn btn-light">
                                        <i class="ti ti-phone me-1"></i> Call Client
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Summary Stats (revamped) -->
                    <div class="row g-2 mt-3">
                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <div class="card flex-fill text-center">
                                    <div class="card-body py-3">
                                        <div class="fs-3 text-primary mb-1"><i class="ti ti-camera"></i></div>
                                        <div class="text-muted small">Photo Shoots</div>
                                        <div class="h4 mt-1">@(Model.PhotoShoots?.Count ?? 0)</div>
                                    </div>
                                </div>

                                <div class="card flex-fill text-center">
                                    <div class="card-body py-3">
                                        <div class="fs-3 text-info mb-1"><i class="ti ti-file-invoice"></i></div>
                                        <div class="text-muted small">Invoices</div>
                                        <div class="h4 mt-1">@(Model.Invoices?.Count ?? 0)</div>
                                    </div>
                                </div>

                                <div class="card flex-fill text-center">
                                    <div class="card-body py-3">
                                        <div class="fs-3 text-success mb-1"><i class="ti ti-cash"></i></div>
                                        <div class="text-muted small">Revenue</div>
                                        <div class="h4 mt-1 text-success">@((Model.Invoices?.Sum(i => i.Amount + i.Tax)
                                                                                        ?? 0).ToString("C"))</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Danger Zone -->
                    <div class="card mt-3 border-danger">
                        <div class="card-header bg-danger-subtle">
                            <h5 class="card-title mb-0 text-danger">Danger Zone</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small mb-3">
                                Deleting this client will permanently remove all associated data including photo shoots
                                and invoices.
                            </p>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100"
                                onclick="return confirm('Are you sure you want to delete this client? This action cannot be undone.')">
                                <i class="ti ti-trash me-1"></i> Delete Client
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>