@{
    ViewBag.Purpose = "Create questionnaire template.";
}

@model MyPhotoBiz.Models.QuestionnaireTemplate

@{
    ViewBag.Title = "Create Questionnaire Template";
    ViewBag.PageTitle = "Create Questionnaire Template";
    ViewBag.SubTitle = "Questionnaire Templates";
    ViewBag.SubTitleUrl = Url.Action("Index", "QuestionnaireTemplates");
    ViewBag.Icon = "ti-plus";
    ViewBag.Color = "primary";
    ViewBag.BackUrl = Url.Action("Index", "QuestionnaireTemplates");
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Template Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Wedding Pre-Shoot Questionnaire">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">Category</label>
                                <input asp-for="Category" class="form-control" placeholder="e.g., Wedding, Portrait, Commercial">
                                <span asp-validation-for="Category" class="text-danger small"></span>
                                <small class="text-muted">Used to organize templates in dropdowns</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="IsActive" class="form-label">Status</label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                    <label class="form-check-label" asp-for="IsActive">
                                        Template is active and available for assignment
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Brief description of this questionnaire">
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QuestionText" class="form-label">Questions <span class="text-danger">*</span></label>
                            <textarea asp-for="QuestionText" class="form-control" rows="10" placeholder="List the questions you want clients to answer before the shoot..."></textarea>
                            <span asp-validation-for="QuestionText" class="text-danger small"></span>
                            <small class="text-muted">Separate questions with new lines or bullets for easy copy/paste.</small>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="ti ti-x me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-check me-1"></i> Create Template
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="ti ti-info-circle me-2"></i>Suggested Questions</h5>
                    <p class="text-muted">Use this area to store repeatable questions you send before shoots, like:</p>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="ti ti-check me-2 text-success"></i>What is the vision or mood for the session?</li>
                        <li class="mb-2"><i class="ti ti-check me-2 text-success"></i>Are there specific poses or shots you want?</li>
                        <li class="mb-2"><i class="ti ti-check me-2 text-success"></i>What outfits will you bring?</li>
                        <li class="mb-2"><i class="ti ti-check me-2 text-success"></i>Do you have any location or accessibility notes?</li>
                        <li class="mb-2"><i class="ti ti-check me-2 text-success"></i>What should I know about the people being photographed?</li>
                    </ul>
                    <p class="text-muted mb-0">You can also include reminders about arrival time, props, or inspiration links.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
