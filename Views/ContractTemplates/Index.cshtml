@model IEnumerable<MyPhotoBiz.Models.ContractTemplate>

@{
    ViewBag.Title = "Contract Templates";
    ViewBag.PageTitle = "Contract Templates";
    ViewBag.Icon = "ti-template";
    ViewBag.Color = "primary";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row">
        <div class="col-12">
            <div data-table data-table-rows-per-page="10" class="card">
                <div class="card-header border-light justify-content-between">
                    <div class="d-flex gap-2">
                        <div class="app-search">
                            <input data-table-search type="text" class="form-control" placeholder="Search templates...">
                            <i data-lucide="search" class="app-search-icon text-muted"></i>
                        </div>
                        <button data-table-delete-selected class="btn btn-danger d-none">Delete</button>
                        <a asp-action="Create" class="btn btn-primary rounded-circle btn-icon"
                           aria-label="Create new template">
                            <i class="ti ti-plus fs-lg" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <span class="me-2 fw-semibold">Filter By:</span>
                        <div class="app-search">
                            <select data-table-filter="Status" class="form-select form-control my-1 my-md-0">
                                <option value="">All Statuses</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                            <i data-lucide="toggle-left" class="app-search-icon text-muted"></i>
                        </div>
                        <div>
                            <select data-table-set-rows-per-page class="form-select form-control my-1 my-md-0">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>
                </div>

                @if (!Model.Any())
                {
                    <!-- Empty State -->
                    <div class="card-body text-center py-5">
                        <div class="empty-state">
                            <div class="empty-state-icon bg-primary-subtle rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                                <i class="ti ti-template fs-1 text-primary"></i>
                            </div>
                            <h4 class="mb-2">No contract templates yet</h4>
                            <p class="text-muted mb-4">Create your first template to streamline contract creation.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Create Your First Template
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-custom table-centered table-select table-hover w-100 mb-0">
                            <thead class="bg-light align-middle bg-opacity-25 thead-sm">
                                <tr class="text-uppercase fs-xxs">
                                    <th scope="col" class="ps-3 th-checkbox">
                                        <input data-table-select-all type="checkbox"
                                               class="form-check-input form-check-input-light fs-14 mt-0"
                                               aria-label="Select all templates">
                                    </th>
                                    <th scope="col" data-table-sort="name">Name</th>
                                    <th scope="col" data-table-sort="category">Category</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Badge Award</th>
                                    <th scope="col" data-table-filter-column="Status">Status</th>
                                    <th scope="col" data-table-sort="created">Created</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var template in Model)
                                {
                                    <tr>
                                        <td class="ps-3">
                                            <input type="checkbox"
                                                   class="form-check-input form-check-input-light fs-14 file-item-check mt-0"
                                                   aria-label="Select template @template.Name">
                                        </td>
                                        <td>
                                            <h5 class="m-0">
                                                <i class="ti ti-template text-primary fs-lg" aria-hidden="true"></i>
                                                <span class="fw-semibold">@template.Name</span>
                                            </h5>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(template.Category))
                                            {
                                                <span class="badge bg-info-subtle text-info">@template.Category</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                @(string.IsNullOrEmpty(template.Description) ? "—" : template.Description)
                                            </span>
                                        </td>
                                        <td>
                                            @if (template.AwardBadgeOnSign && template.BadgeToAward != null)
                                            {
                                                <span class="badge bg-success-subtle text-success">
                                                    <i class="ti ti-award me-1" aria-hidden="true"></i>@template.BadgeToAward.Name
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td data-filter-value="@(template.IsActive ? "Active" : "Inactive")">
                                            @if (template.IsActive)
                                            {
                                                <span class="badge bg-success-subtle text-success">
                                                    <i class="ti ti-check me-1" aria-hidden="true"></i>Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-subtle text-secondary">
                                                    <i class="ti ti-minus me-1" aria-hidden="true"></i>Inactive
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@template.CreatedDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center justify-content-center gap-1">
                                                <a asp-action="Edit" asp-route-id="@template.Id"
                                                   class="btn btn-light btn-icon btn-sm rounded-circle"
                                                   title="Edit"
                                                   aria-label="Edit template @template.Name">
                                                    <i class="ti ti-edit fs-lg" aria-hidden="true"></i>
                                                </a>
                                                <form asp-action="ToggleActive" asp-route-id="@template.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="btn @(template.IsActive ? "btn-warning" : "btn-success") btn-icon btn-sm rounded-circle"
                                                            title="@(template.IsActive ? "Deactivate" : "Activate")"
                                                            aria-label="@(template.IsActive ? "Deactivate" : "Activate") template @template.Name">
                                                        <i class="ti ti-@(template.IsActive ? "eye-off" : "eye") fs-lg" aria-hidden="true"></i>
                                                    </button>
                                                </form>
                                                <button type="button"
                                                        class="btn btn-light btn-icon btn-sm rounded-circle delete-btn"
                                                        title="Delete"
                                                        aria-label="Delete template @template.Name"
                                                        data-template-id="@template.Id"
                                                        data-template-name="@template.Name">
                                                    <i class="ti ti-trash fs-lg" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div data-table-pagination-info="templates"></div>
                            <div data-table-pagination></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/custom-table.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-btn').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    var templateId = this.getAttribute('data-template-id');
                    var templateName = this.getAttribute('data-template-name');

                    confirmDelete(templateName, function() {
                        var token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                        if (!token) {
                            showError('Security token missing. Please refresh the page.');
                            return;
                        }

                        var formData = new FormData();
                        formData.append('__RequestVerificationToken', token);

                        fetch('@Url.Action("Delete", "ContractTemplates")/' + templateId, {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => {
                            if (response.ok) {
                                showSuccess('Template deleted successfully!');
                                setTimeout(() => window.location.reload(), 1500);
                            } else {
                                showError('Failed to delete template');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            showError('An error occurred while deleting the template');
                        });
                    });
                });
            });
        });
    </script>
}
