@model List<MyPhotoBiz.ViewModels.ClientGalleryViewModel>
@{
    ViewData["Title"] = "My Galleries";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">My Galleries</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Galleries</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="ti ti-photo-off icon-empty-state"></i>
                        <h4 class="mt-3">No Galleries Available</h4>
                        <p class="text-muted">You don't have access to any galleries at the moment.</p>
                        <p class="text-muted">Please contact your photographer if you believe this is an error.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var gallery in Model)
            {
                var daysUntilExpiry = (gallery.ExpiryDate - DateTime.UtcNow).Days;
                var isExpiringSoon = daysUntilExpiry <= 7 && daysUntilExpiry > 0;
                var brandColor = gallery.BrandColor ?? "#2c3e50";

                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-4">
                    <div class="card gallery-card h-100" style="border-top-color: @brandColor;">
                        @if (!string.IsNullOrEmpty(gallery.ThumbnailUrl))
                        {
                            <img src="@gallery.ThumbnailUrl" class="card-img-top gallery-thumbnail" alt="@gallery.Name" onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="card-img-top d-none gallery-placeholder">
                                <i class="ti ti-photo-off icon-empty-state"></i>
                            </div>
                        }
                        else
                        {
                            <div class="card-img-top gallery-placeholder">
                                <i class="ti ti-photo-off icon-empty-state"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">@gallery.Name</h5>
                                    @if (isExpiringSoon)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="ti ti-clock-alert"></i> Expires in @daysUntilExpiry days
                                        </span>
                                    }
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("ViewGallery", new { id = gallery.GalleryId })">
                                                <i class="ti ti-eye me-2"></i>View Gallery
                                            </a>
                                        </li>
                                        @if (gallery.CanDownload)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("ViewGallery", new { id = gallery.GalleryId })">
                                                    <i class="ti ti-download me-2"></i>Download Photos
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(gallery.Description))
                            {
                                <p class="card-text text-muted small mb-3">@gallery.Description</p>
                            }

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <span class="badge bg-primary">
                                        <i class="ti ti-photo"></i> @gallery.PhotoCount Photos
                                    </span>
                                </div>
                                <small class="text-muted">
                                    <i class="ti ti-calendar"></i>
                                    Expires: @gallery.ExpiryDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Your Permissions:</small>
                                <div class="d-flex gap-2 flex-wrap">
                                    @if (gallery.CanProof)
                                    {
                                        <span class="badge bg-info">
                                            <i class="ti ti-checkbox"></i> Proofing
                                        </span>
                                    }
                                    @if (gallery.CanDownload)
                                    {
                                        <span class="badge bg-success">
                                            <i class="ti ti-download"></i> Download
                                        </span>
                                    }
                                    @if (gallery.CanOrder)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="ti ti-shopping-cart"></i> Order
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="d-grid">
                                <a href="@Url.Action("ViewGallery", new { id = gallery.GalleryId })"
                                   class="btn"
                                   style="background-color: @brandColor; border-color: @brandColor; color: white;">
                                    <i class="ti ti-photo"></i> View Gallery
                                </a>
                            </div>

                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="ti ti-clock"></i>
                                    Access granted: @gallery.GrantedDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-refresh if there are galleries expiring soon
        @if (Model != null && Model.Any(g => (g.ExpiryDate - DateTime.UtcNow).Days <= 1))
        {
            <text>
            // Refresh page every 5 minutes to update expiry status
            setTimeout(function() {
                location.reload();
            }, 300000);
            </text>
        }
    </script>
}
