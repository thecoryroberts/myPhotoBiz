@{
    ViewData["Title"] = "Gallery Access";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - myPhotoBiz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@@latest/tabler-icons.min.css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold">Gallery Access</h2>
                            <p class="text-muted">Enter your gallery code and password to view your photos</p>
                        </div>

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="ti ti-alert-circle me-2"></i>
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }

                        <form asp-action="AccessGallery" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label for="clientCode" class="form-label">Gallery Code</label>
                                <input type="text"
                                       class="form-control form-control-lg"
                                       id="clientCode"
                                       name="clientCode"
                                       placeholder="Enter your gallery code"
                                       required
                                       autocomplete="off">
                            </div>

                            <div class="mb-4">
                                <label for="clientPassword" class="form-label">Password</label>
                                <input type="password"
                                       class="form-control form-control-lg"
                                       id="clientPassword"
                                       name="clientPassword"
                                       placeholder="Enter your password"
                                       required
                                       autocomplete="off">
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="ti ti-login me-2"></i> Access Gallery
                            </button>
                        </form>

                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                <i class="ti ti-info-circle me-1"></i>
                                If you don't have access credentials, please contact your photographer
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .card {
            border: none;
            border-radius: 15px;
        }
    </style>
</body>
</html>
