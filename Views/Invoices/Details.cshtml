@model MyPhotoBiz.ViewModels.InvoiceViewModel
@{
    ViewBag.Title = "Invoice Details";
}

<div class="container-fluid">
   @await Html.PartialAsync("~/Views/Shared/Partials/_PageTitle.cshtml")
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <h3>Invoice @Model.InvoiceNumber</h3>
                    <p><strong>Date:</strong> @Model.InvoiceDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Due:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Client:</strong> @Model.ClientName</p>
                    <p><strong>Status:</strong> @Model.Status</p>

                    <h5 class="mt-4">Items</h5>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Description</th>
                                <th>Qty</th>
                                <th>Unit</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.InvoiceItems != null && Model.InvoiceItems.Any())
                            {
                                for (int i = 0; i < Model.InvoiceItems.Count; i++)
                                {
                                    var it = Model.InvoiceItems[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@it.Description</td>
                                        <td>@it.Quantity</td>
                                        <td>@it.UnitPrice.ToString("C")</td>
                                        <td>@((it.Quantity * it.UnitPrice).ToString("C"))</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5">No items</td></tr>
                            }
                        </tbody>
                    </table>

                    <div class="text-end">
                        <p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
                        <p><strong>Tax:</strong> @Model.Tax.ToString("C")</p>
                        <h4><strong>Total:</strong> @Model.TotalAmount.ToString("C")</h4>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-3">
                            <h6>Notes</h6>
                            <p>@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 d-print-none">
            <div class="card">
                <div class="card-body d-flex flex-column gap-2">
                    <a asp-action="Preview" asp-route-invoiceNumber="@Model.InvoiceNumber" target="_blank" class="btn btn-outline-primary">Preview (PDF)</a>
                    <a asp-action="Download" asp-route-id="@Model.InvoiceNumber" class="btn btn-outline-primary">Download PDF</a>
                    <a asp-action="Index" class="btn btn-light">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
