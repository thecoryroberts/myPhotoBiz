@model MyPhotoBiz.ViewModels.EditPermissionViewModel

<div class="modal fade" id="editPermissionModal" tabindex="-1" role="dialog" aria-labelledby="editPermissionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPermissionModalLabel">Edit Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editPermissionForm" asp-action="Edit" asp-controller="Permissions" method="post">
                @Html.AntiForgeryToken()

                <!-- Hidden field for PermissionId -->
                <input type="hidden" name="PermissionId" value="@Model.Id" />

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="permissionName" class="form-label">Permission Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="permissionName" asp-for="Name" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="permissionDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="permissionDescription" asp-for="Description" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    @if (Model?.AvailableRoles?.Any() == true)
                    {
                        <div class="mb-3">
                            <label class="form-label">Assign to Roles</label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <div class="form-check">
                                        <!-- Preselect roles that are already assigned (reflection-safe: supports ViewModel without AssignedRoles property) -->
                                        @{
                                            bool isChecked = false;
                                            var assignedProp = Model?.GetType().GetProperty("AssignedRoles");
                                            if (assignedProp != null)
                                            {
                                                var assignedVal = assignedProp.GetValue(Model) as System.Collections.IEnumerable;
                                                if (assignedVal != null)
                                                {
                                                    foreach (var ar in assignedVal)
                                                    {
                                                        var idProp = ar?.GetType().GetProperty("Id");
                                                        if (idProp != null)
                                                        {
                                                            var idVal = idProp.GetValue(ar);
                                                            if (idVal != null && idVal.ToString() == role.Id.ToString())
                                                            {
                                                                isChecked = true;
                                                                break;
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                        <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Id" id="role_@role.Id" @(isChecked ? "checked" : "")>
                                        <label class="form-check-label" for="role_@role.Id">
                                            @role.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function(){
        const form = document.getElementById('editPermissionForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const btn = form.querySelector('button[type="submit"]');
                btn.disabled = true;
                const formData = new FormData(form);

                fetch(form.action, {
                    method: 'POST',
                    body: formData
                })
                .then(r => r.json())
                .then(data => {
                    btn.disabled = false;
                    if (data.success) {
                        var modal = bootstrap.Modal.getInstance(document.getElementById('editPermissionModal'));
                        if (modal) modal.hide();
                        form.reset();

                        // Show toast notification
                        if (typeof showToast === 'function') {
                            showToast(data.message || 'Permission updated successfully', 'success');
                        }

                        // Reload the page to show the updated permission
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        if (typeof showToast === 'function') {
                            showToast(data.message || 'Error updating permission', 'danger');
                        }
                    }
                })
                .catch(err => {
                    btn.disabled = false;
                    console.error(err);
                    if (typeof showToast === 'function') {
                        showToast('An error occurred updating the permission.', 'danger');
                    }
                });
            });
        }
    })();
</script>
