@using MyPhotoBiz.ViewModels
@model PackageAddOnViewModel
@{
    ViewBag.Title = "Edit Add-on";
    ViewBag.PageTitle = "Edit Package Add-on";
    ViewBag.Icon = "ti-puzzle";
    ViewBag.Color = "info";
    ViewBag.Purpose = "View for package (EditAddOn).";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditAddOn" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ServicePackageId" />

                        <!-- Basic Info -->
                        <h5 class="mb-3"><i class="ti ti-info-circle me-2"></i>Basic Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label asp-for="Name" class="form-label">Add-on Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Extra Hour of Coverage" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe what this add-on includes"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Pricing -->
                        <h5 class="mb-3"><i class="ti ti-currency-dollar me-2"></i>Pricing</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Price <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label d-block mb-3">Add-on Type</label>
                                <div class="form-check form-check-inline">
                                    <input asp-for="IsStandalone" class="form-check-input" type="radio" value="false" id="packageSpecific" />
                                    <label class="form-check-label" for="packageSpecific">
                                        Package-specific
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="IsStandalone" class="form-check-input" type="radio" value="true" id="standalone" />
                                    <label class="form-check-label" for="standalone">
                                        Standalone
                                    </label>
                                </div>
                                <small class="d-block text-muted mt-1">
                                    Standalone add-ons are available for all packages
                                </small>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Status -->
                        <h5 class="mb-3"><i class="ti ti-settings me-2"></i>Settings</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive" />
                                    <label class="form-check-label" for="isActive">
                                        Active (visible to clients)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="AddOns" asp-route-packageId="@Model.ServicePackageId" class="btn btn-light">
                                    <i class="ti ti-arrow-left me-1"></i>Cancel
                                </a>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="ti ti-trash me-1"></i>Delete
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="ti ti-device-floppy me-1"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this add-on?</p>
                <p class="text-danger mb-0"><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteAddOn" asp-route-id="@Model.Id" asp-route-packageId="@Model.ServicePackageId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="ti ti-trash me-1"></i>Delete Add-on
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
