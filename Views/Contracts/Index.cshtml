@using MyPhotoBiz.ViewModels
@model IEnumerable<MyPhotoBiz.Models.Contract>

@{
    ViewBag.Title = "Contracts";
    ViewBag.PageTitle = "Contract Management";
    ViewBag.Icon = "ti-file-text";
    ViewBag.Color = "info";
    ViewBag.ActionUrl = Url.Action("Create", "Contracts");
    ViewBag.ActionText = "New Contract";
    ViewBag.ActionIcon = "ti-plus";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Client</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Signed Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contract in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@contract.Title</strong>
                                    </td>
                                    <td>
                                        @if (contract.ClientProfile?.User != null)
                                        {
                                            <span>@contract.ClientProfile.User.FirstName @contract.ClientProfile.User.LastName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No client</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (contract.Status)
                                        {
                                            case MyPhotoBiz.Enums.ContractStatus.Draft:
                                                <span class="badge bg-secondary">Draft</span>
                                                break;
                                            case MyPhotoBiz.Enums.ContractStatus.PendingSignature:
                                                <span class="badge bg-warning">Pending Signature</span>
                                                break;
                                            case MyPhotoBiz.Enums.ContractStatus.Signed:
                                                <span class="badge bg-success">Signed</span>
                                                break;
                                            case MyPhotoBiz.Enums.ContractStatus.Expired:
                                                <span class="badge bg-danger">Expired</span>
                                                break;
                                        }
                                    </td>
                                    <td>@contract.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (contract.SignedDate.HasValue)
                                        {
                                            @contract.SignedDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not signed</span>
                                        }
                                    </td>
                                    <td>
                                        <partial name="Partials/_ActionButtons" model="@(new ActionButtonsModel {
                                            Id = contract.Id,
                                            Controller = "Contracts",
                                            DeleteDataValue = contract.Title,
                                            ExtraButtons = contract.Status != MyPhotoBiz.Enums.ContractStatus.Signed
                                                ? new List<ExtraButton> { new ExtraButton { Action = "Sign", Icon = "ti ti-pencil", Title = "Sign", Color = "success" } }
                                                : null
                                        })" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="ti ti-file-text-off fs-1 text-muted d-block mb-3"></i>
                    <h5 class="text-muted">No contracts found</h5>
                    <p class="text-muted">Create your first contract to get started.</p>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="ti ti-plus me-1"></i> Create Contract
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-btn').forEach(function(link) {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    var contractTitle = this.getAttribute('data-item-name');
                    var deleteUrl = this.href;

                    confirmDelete(contractTitle, function() {
                        var token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                        if (!token) {
                            showError('Security token missing. Please refresh the page.');
                            return;
                        }
                        fetch(deleteUrl, {
                            method: 'POST',
                            headers: {
                                'RequestVerificationToken': token
                            }
                        })
                        .then(response => {
                            if (response.ok) {
                                showSuccess('Contract deleted successfully!');
                                setTimeout(() => window.location.reload(), 1500);
                            } else {
                                showError('Failed to delete contract');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            showError('An error occurred while deleting the contract');
                        });
                    });
                });
            });
        });
    </script>
}
