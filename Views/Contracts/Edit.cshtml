@model MyPhotoBiz.ViewModels.EditContractViewModel
@using System.IO

@{
    ViewBag.Title = "Edit";
    ViewBag.PageTitle = "Edit Contract";
    ViewBag.SubTitle = "Contracts";
    ViewBag.SubTitleUrl = Url.Action("Index", "Contracts");
    ViewBag.Icon = "ti-edit";
    ViewBag.Color = "info";
    ViewBag.BackUrl = Url.Action("Index", "Contracts");
    ViewBag.Purpose = "Edit contract.";
}

<div class="container-fluid">
    <partial name="Partials/_PageTitle" />

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ExistingPdfPath" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Contract Title <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="e.g., Wedding Photography Agreement">
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ExistingPdfPath))
                        {
                            <div class="alert alert-info mb-3">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <i class="ti ti-file-text me-2"></i>
                                        <strong>Current PDF:</strong> @System.IO.Path.GetFileName(Model.ExistingPdfPath)
                                    </div>
                                    <a href="@Model.ExistingPdfPath" target="_blank" class="btn btn-sm btn-info">
                                        <i class="ti ti-eye me-1"></i>View PDF
                                    </a>
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="PdfFile" class="form-label">
                                <i class="ti ti-file-upload me-1"></i>@(string.IsNullOrEmpty(Model.ExistingPdfPath) ? "Upload PDF Contract" : "Replace PDF Contract")
                            </label>
                            <input asp-for="PdfFile" type="file" class="form-control" accept=".pdf">
                            <span asp-validation-for="PdfFile" class="text-danger small"></span>
                            <small class="text-muted">
                                <i class="ti ti-info-circle me-1"></i>
                                @(string.IsNullOrEmpty(Model.ExistingPdfPath) ?
                                    "Upload a PDF file to use instead of contract content." :
                                    "Upload a new PDF to replace the existing one, or leave blank to keep current PDF.")
                            </small>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ClientId" class="form-label">Client</label>
                                <select asp-for="ClientId" class="form-select">
                                    <option value="">-- Select Client (Optional) --</option>
                                    @foreach (var client in Model.AvailableClients)
                                    {
                                        <option value="@client.Id">@client.FullName (@client.Email)</option>
                                    }
                                </select>
                                <span asp-validation-for="ClientId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhotoShootId" class="form-label">Photo Shoot</label>
                                <select asp-for="PhotoShootId" class="form-select">
                                    <option value="">-- Select Photo Shoot (Optional) --</option>
                                    @foreach (var shoot in Model.AvailablePhotoShoots)
                                    {
                                        <option value="@shoot.Id">@shoot.Title - @shoot.ShootDate.ToString("MMM dd, yyyy")</option>
                                    }
                                </select>
                                <span asp-validation-for="PhotoShootId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="0">Draft</option>
                                <option value="1">Pending Signature</option>
                                <option value="2">Signed</option>
                                <option value="3">Expired</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Contract Content (Optional)</label>
                            <textarea asp-for="Content" class="form-control" rows="15" placeholder="Enter contract terms and conditions... (leave blank if using PDF)"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <small class="text-muted">You can use HTML formatting if needed. This field is optional if you have a PDF uploaded.</small>
                        </div>

                        <div class="card bg-light border-0 mb-3">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="ti ti-award me-2"></i>Badge Settings (Optional)
                                </h6>
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="AwardBadgeOnSign" class="form-check-input" type="checkbox" id="awardBadgeCheck">
                                        <label class="form-check-label" for="awardBadgeCheck">
                                            Award badge when client signs this contract
                                        </label>
                                    </div>
                                </div>
                                <div id="badgeSelection" style="display: none;">
                                    <label asp-for="BadgeToAwardId" class="form-label">Select Badge to Award</label>
                                    <select asp-for="BadgeToAwardId" class="form-select">
                                        <option value="">-- Select Badge --</option>
                                        @foreach (var badge in Model.AvailableBadges)
                                        {
                                            <option value="@badge.Id">@badge.Name - @badge.Description</option>
                                        }
                                    </select>
                                    <small class="text-muted">This badge will be automatically awarded to the client upon signing.</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="ti ti-x me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" data-loading-text="Saving...">
                                <span class="btn-text">
                                    <i class="ti ti-check me-1"></i> Save Changes
                                </span>
                                <span class="btn-loading d-none">
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    Saving...
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="ti ti-info-circle me-2"></i>Contract Info</h5>

                    <div class="mb-3">
                        <strong>Created:</strong>
                        <div class="text-muted">@Model.CreatedDate.ToString("MMMM dd, yyyy")</div>
                    </div>

                    <div class="mb-3">
                        <strong>Current Status:</strong>
                        <div class="mt-1">
                            @switch (Model.Status)
                            {
                                case MyPhotoBiz.Enums.ContractStatus.Draft:
                                    <span class="badge bg-secondary">Draft</span>
                                    break;
                                case MyPhotoBiz.Enums.ContractStatus.PendingSignature:
                                    <span class="badge bg-warning">Pending Signature</span>
                                    break;
                                case MyPhotoBiz.Enums.ContractStatus.Signed:
                                    <span class="badge bg-success">Signed</span>
                                    break;
                                case MyPhotoBiz.Enums.ContractStatus.Expired:
                                    <span class="badge bg-danger">Expired</span>
                                    break;
                            }
                        </div>
                    </div>

                    <hr>

                    <h6>Contract Template Variables</h6>
                    <small class="text-muted">
                        You can use these placeholders in your contract:
                        <ul class="mt-2">
                            <li><code>{{ClientName}}</code></li>
                            <li><code>{{ClientEmail}}</code></li>
                            <li><code>{{ShootDate}}</code></li>
                            <li><code>{{CurrentDate}}</code></li>
                        </ul>
                    </small>
                </div>
            </div>

            @if (Model.Status == MyPhotoBiz.Enums.ContractStatus.Signed)
            {
                <div class="alert alert-warning mt-3">
                    <i class="ti ti-alert-triangle me-2"></i>
                    <strong>Warning:</strong> This contract has been signed. Changes may invalidate the signature.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Toggle badge selection visibility
        document.getElementById('awardBadgeCheck').addEventListener('change', function() {
            const badgeSelection = document.getElementById('badgeSelection');
            badgeSelection.style.display = this.checked ? 'block' : 'none';
        });

        // Show badge selection if already checked (for validation errors or existing value)
        if (document.getElementById('awardBadgeCheck').checked) {
            document.getElementById('badgeSelection').style.display = 'block';
        }
    </script>
}
